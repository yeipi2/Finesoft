@inject NavigationManager Navigation
@inject AuthenticationStateProvider AuthStateProvider

@code {
    [Parameter] public string RedirectTo { get; set; } = "/iniciar-sesion";

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthStateProvider.GetAuthenticationStateAsync();
        var currentUri = Navigation.ToBaseRelativePath(Navigation.Uri);

        // Solo redirige si no está autenticado Y no está ya en la página de login
        if ((authState.User.Identity == null || !authState.User.Identity.IsAuthenticated) 
            && !currentUri.StartsWith("iniciar-sesion"))
        {
            Navigation.NavigateTo(RedirectTo, true);
        }
    }
}