@if (!string.IsNullOrEmpty(Notes))
{
    <div class="card mb-4">
        <div class="card-header bg-warning">
            <h6 class="mb-0"><i class="bi bi-sticky"></i> Notas Adicionales</h6>
        </div>
        <div class="card-body">
            <p class="mb-0">@Notes</p>
        </div>
    </div>
}

@code {
    [Parameter] public string? Notes { get; set; }
}
