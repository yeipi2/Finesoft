@using fs_front.DTO
@using fs_front.Components.Shared
<FormSection Title="Artículos de la Factura"
             IconClass="bi-list-ul"
             IsComplete="@IsComplete">

    <div class="d-flex justify-content-between align-items-center mb-3">
        <span class="small text-muted">@Dto.Items.Count artículo(s) agregado(s)</span>
        <button type="button" class="btn btn-sm btn-primary" @onclick="AddItem">
            <i class="bi bi-plus-lg"></i> Agregar Artículo
        </button>
    </div>

    <div class="border rounded p-3 bg-light">
        @if (!Dto.Items.Any())
        {
            <div class="text-center text-muted py-4">
                <i class="bi bi-inbox fs-2"></i>
                <p class="mb-0 mt-2">No hay artículos. Agregue al menos uno.</p>
            </div>
        }
        else
        {
            @foreach (var (item, index) in Dto.Items.Select((x, i) => (x, i)))
            {
                <div class="card mb-2 shadow-sm">
                    <div class="card-body p-3">
                        <div class="d-flex justify-content-between align-items-start mb-2">
                            <h6 class="mb-0 text-primary small">
                                <i class="bi bi-card-list me-1"></i> Artículo #@(index + 1)
                            </h6>
                            <button type="button"
                                    class="btn btn-sm btn-outline-danger py-0 px-2"
                                    @onclick="() => RemoveItem(index)"
                                    title="Eliminar artículo">
                                <i class="bi bi-trash"></i>
                            </button>
                        </div>

                        <div class="row g-2">
                            <div class="col-md-12">
                                <label class="form-label small mb-1">Descripción *</label>
                                <InputText class="form-control form-control-sm"
                                           @bind-Value="item.Description"
                                           placeholder="Descripción del servicio o producto"
                                           @bind-Value:after="NotifyChanged" />
                            </div>
                            <div class="col-md-4">
                                <label class="form-label small mb-1">Cantidad *</label>
                                <InputNumber class="form-control form-control-sm"
                                             @bind-Value="item.Quantity"
                                             @bind-Value:after="RecalcAndNotify" />
                            </div>
                            <div class="col-md-4">
                                <label class="form-label small mb-1">Precio Unitario *</label>
                                <InputNumber class="form-control form-control-sm"
                                             @bind-Value="item.UnitPrice"
                                             @bind-Value:after="RecalcAndNotify" />
                            </div>
                            <div class="col-md-4">
                                <label class="form-label small mb-1">Subtotal</label>
                                <input type="text"
                                       class="form-control form-control-sm bg-white"
                                       value="@FormatCurrency(item.Quantity * item.UnitPrice)"
                                       readonly />
                            </div>

                            @* ── Buscador de Tickets ── *@
                            <div class="col-md-12">
                                <label class="form-label small mb-1">
                                    Ticket Asociado
                                    <span class="text-muted">(Opcional)</span>
                                </label>

                                @if (IsLoadingTickets)
                                {
                                    <div class="d-flex align-items-center">
                                        <span class="spinner-border spinner-border-sm me-2"></span>
                                        <span class="small">Cargando tickets...</span>
                                    </div>
                                }
                                else if (AvailableTickets == null || !AvailableTickets.Any())
                                {
                                    <input type="text"
                                           class="form-control form-control-sm"
                                           value="-- No hay tickets disponibles --"
                                           disabled />
                                    <small class="text-muted">Solo se pueden asociar tickets sin cotización o factura asignada</small>
                                }
                                else
                                {
                                    <div class="position-relative">
                                        <input type="text"
                                               class="form-control form-control-sm"
                                               placeholder="Buscar por #ID, título o cliente..."
                                               value="@GetTicketSearchText(index)"
                                               @oninput="@(e => HandleTicketInput(e, item, index))"
                                               @onfocus="@(() => HandleTicketFocus(index))"
                                               @onblur="@(() => HandleTicketBlur(index))"
                                               autocomplete="off" />

                                        @if (IsTicketDropdownVisible(index) && GetFilteredTickets(index).Any())
                                        {
                                            <div class="autocomplete-dropdown">
                                                @foreach (var ticket in GetFilteredTickets(index).Take(8))
                                                {
                                                    <div class="autocomplete-item"
                                                         @onmousedown="@(() => SelectTicket(item, ticket, index))"
                                                         @onmousedown:preventDefault>
                                                        <div class="d-flex justify-content-between align-items-start">
                                                            <div>
                                                                <strong class="text-primary">#@ticket.Id</strong> — @ticket.Title
                                                                <br />
                                                                <small class="text-muted">
                                                                    <i class="bi bi-building"></i> @ticket.ClientName |
                                                                    <i class="bi bi-clock"></i> @ticket.ActualHours.ToString("0.0")h
                                                                </small>
                                                            </div>
                                                        </div>
                                                    </div>
                                                }
                                            </div>
                                        }
                                    </div>

                                    @if (item.TicketId.HasValue && item.TicketId.Value > 0)
                                    {
                                        var sel = AvailableTickets.FirstOrDefault(t => t.Id == item.TicketId.Value);
                                        @if (sel != null)
                                        {
                                            <div class="alert alert-success p-2 mt-2 mb-0">
                                                <div class="d-flex justify-content-between align-items-start">
                                                    <small>
                                                        <i class="bi bi-check-circle-fill"></i>
                                                        <strong>#@sel.Id — @sel.Title</strong><br />
                                                        Cliente: @sel.ClientName | Horas: @sel.ActualHours.ToString("0.0")h
                                                    </small>
                                                    <button type="button"
                                                            class="btn btn-sm btn-link text-danger p-0"
                                                            @onclick="() => ClearTicket(item, index)"
                                                            title="Quitar ticket">
                                                        <i class="bi bi-x-lg"></i>
                                                    </button>
                                                </div>
                                            </div>
                                        }
                                    }
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
    </div>

    @* ── Totales ── *@
    <div class="card bg-light border-primary mt-3">
        <div class="card-body p-3">
            <div class="row justify-content-end">
                <div class="col-md-6 col-lg-5">
                    <div class="d-flex justify-content-between mb-2">
                        <span class="small">Subtotal:</span>
                        <strong class="small">@FormatCurrency(Subtotal)</strong>
                    </div>
                    <div class="d-flex justify-content-between mb-2">
                        <span class="small">IVA (16%):</span>
                        <strong class="small">@FormatCurrency(Tax)</strong>
                    </div>
                    <hr class="my-2" />
                    <div class="d-flex justify-content-between">
                        <span class="fw-bold">Total:</span>
                        <strong class="text-success h5 mb-0">@FormatCurrency(Total)</strong>
                    </div>
                </div>
            </div>
        </div>
    </div>

</FormSection>

@code {
    [Parameter] public InvoiceDto               Dto              { get; set; } = new();
    [Parameter] public List<TicketDetailDto>?   AvailableTickets { get; set; }
    [Parameter] public bool                     IsLoadingTickets { get; set; }
    [Parameter] public bool                     IsComplete       { get; set; }

    [Parameter] public EventCallback OnChanged { get; set; }

    // ── Totals ──
    private decimal Subtotal => Dto.Items.Sum(i => i.Quantity * i.UnitPrice);
    private decimal Tax      => Subtotal * 0.16m;
    private decimal Total    => Subtotal + Tax;

    // ── Ticket search per-item state ──
    private Dictionary<int, string>              _ticketSearchTexts = new();
    private Dictionary<int, List<TicketDetailDto>> _filteredTickets = new();
    private HashSet<int>                         _dropdownVisible   = new();

    private string GetTicketSearchText(int index)
        => _ticketSearchTexts.TryGetValue(index, out var t) ? t : "";

    private List<TicketDetailDto> GetFilteredTickets(int index)
        => _filteredTickets.TryGetValue(index, out var list) ? list : new();

    private bool IsTicketDropdownVisible(int index) => _dropdownVisible.Contains(index);

    private void HandleTicketInput(ChangeEventArgs e, InvoiceItemDto item, int index)
    {
        var text = e.Value?.ToString() ?? "";
        _ticketSearchTexts[index] = text;

        if (string.IsNullOrWhiteSpace(text))
        {
            _filteredTickets[index] = new();
            _dropdownVisible.Remove(index);
            item.TicketId = null;
        }
        else
        {
            _filteredTickets[index] = AvailableTickets?
                .Where(t =>
                    t.Id.ToString().Contains(text, StringComparison.OrdinalIgnoreCase) ||
                    t.Title.Contains(text, StringComparison.OrdinalIgnoreCase) ||
                    t.ClientName.Contains(text, StringComparison.OrdinalIgnoreCase))
                .OrderBy(t => t.Id)
                .ToList() ?? new();
            _dropdownVisible.Add(index);
        }
    }

    private void HandleTicketFocus(int index)
    {
        var text = GetTicketSearchText(index);
        if (!string.IsNullOrWhiteSpace(text)) _dropdownVisible.Add(index);
    }

    private async Task HandleTicketBlur(int index)
    {
        await Task.Delay(200);
        _dropdownVisible.Remove(index);
    }

    private void SelectTicket(InvoiceItemDto item, TicketDetailDto ticket, int index)
    {
        item.TicketId             = ticket.Id;
        _ticketSearchTexts[index] = $"#{ticket.Id} - {ticket.Title}";
        _dropdownVisible.Remove(index);
        _filteredTickets[index]   = new();
        NotifyChanged();
    }

    private void ClearTicket(InvoiceItemDto item, int index)
    {
        item.TicketId             = null;
        _ticketSearchTexts[index] = "";
        _filteredTickets[index]   = new();
        NotifyChanged();
    }

    public void InitTicketSearchTexts()
    {
        for (int i = 0; i < Dto.Items.Count; i++)
        {
            var item   = Dto.Items[i];
            if (item.TicketId.HasValue && item.TicketId.Value > 0)
            {
                var ticket = AvailableTickets?.FirstOrDefault(t => t.Id == item.TicketId.Value);
                _ticketSearchTexts[i] = ticket != null ? $"#{ticket.Id} - {ticket.Title}" : "";
            }
            else
            {
                _ticketSearchTexts[i] = "";
            }
            _filteredTickets[i] = new();
        }
    }

    private void AddItem()
    {
        var newItem = new InvoiceItemDto { Quantity = 1, UnitPrice = 0 };
        Dto.Items.Add(newItem);
        var idx = Dto.Items.Count - 1;
        _ticketSearchTexts[idx] = "";
        _filteredTickets[idx]   = new();
        NotifyChanged();
    }

    private void RemoveItem(int index)
    {
        Dto.Items.RemoveAt(index);

        var newSearch  = new Dictionary<int, string>();
        var newFiltered = new Dictionary<int, List<TicketDetailDto>>();
        var newVisible  = new HashSet<int>();

        for (int i = 0; i < Dto.Items.Count; i++)
        {
            int oldIdx = i < index ? i : i + 1;
            if (_ticketSearchTexts.TryGetValue(oldIdx, out var s))   newSearch[i]  = s;
            if (_filteredTickets.TryGetValue(oldIdx,   out var fl))  newFiltered[i] = fl;
            if (_dropdownVisible.Contains(oldIdx))                   newVisible.Add(i);
        }

        _ticketSearchTexts = newSearch;
        _filteredTickets   = newFiltered;
        _dropdownVisible   = newVisible;
        NotifyChanged();
    }

    private void RecalcAndNotify() => NotifyChanged();
    private void NotifyChanged()   => OnChanged.InvokeAsync();

    private static string FormatCurrency(decimal amount) => $"$ {amount:N2}";
}
