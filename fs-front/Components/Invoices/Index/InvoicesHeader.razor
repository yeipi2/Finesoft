<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <div class="d-flex align-items-center gap-2">
            <i class="bi bi-receipt fs-3 text-primary"></i>
            <h2 class="mb-0">Facturación</h2>
        </div>
        <p class="text-muted mb-0">Gestión de facturas y cobros</p>
    </div>

    @if (CanCreate)
    {
        <div class="d-flex gap-2">
            <button class="btn btn-outline-primary" @onclick="OnGenerate" disabled="@IsGenerating">
                @if (IsGenerating)
                {
                    <span class="spinner-border spinner-border-sm me-2"></span>
                }
                <i class="bi bi-calendar-month"></i>
                Generar Mensuales
            </button>
            <button class="btn btn-primary" @onclick="OnNew">
                <i class="bi bi-plus-lg"></i>
                Nueva Factura
            </button>
        </div>
    }
</div>

@code {
    [Parameter] public bool CanCreate { get; set; }
    [Parameter] public bool IsGenerating { get; set; }
    [Parameter] public EventCallback OnNew { get; set; }
    [Parameter] public EventCallback OnGenerate { get; set; }
}
