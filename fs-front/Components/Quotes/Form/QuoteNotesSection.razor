@* Sección acordeón: Notas Adicionales (opcional) *@
@using fs_front.DTO

<div class="accordion-item">
    <h2 class="accordion-header" id="headingNotes">
        <button class="accordion-button collapsed"
                type="button"
                data-bs-toggle="collapse"
                data-bs-target="#collapseNotes"
                aria-expanded="false"
                aria-controls="collapseNotes">
            <i class="bi bi-journal-text me-2"></i>
            <strong>Notas Adicionales</strong>
            <span class="badge bg-secondary ms-2">Opcional</span>
        </button>
    </h2>
    <div id="collapseNotes"
         class="accordion-collapse collapse"
         aria-labelledby="headingNotes"
         data-bs-parent="#quoteAccordion">
        <div class="accordion-body">
            <label for="Notes" class="form-label small fw-bold">Observaciones</label>
            <InputTextArea id="Notes"
                           class="form-control form-control-sm"
                           rows="3"
                           placeholder="Condiciones, términos adicionales..."
                           @bind-Value="Model.Notes" />
        </div>
    </div>
</div>

@code {
    [Parameter, EditorRequired] public QuoteDto Model { get; set; } = default!;
}
