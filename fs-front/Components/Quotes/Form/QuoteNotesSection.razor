@* fs-front/Components/Quotes/Form/QuoteNotesSection.razor *@
@using fs_front.DTO
@using fs_front.Components.Shared
<FormSection Title="Notas Adicionales"
             IconClass="bi-journal-text"
             IsComplete="true"
             IsOptional="true">

    <div class="row g-3">
        <div class="col-12">
            <label for="Notes" class="form-label small fw-bold">Observaciones</label>
            <InputTextArea id="Notes"
                           class="form-control form-control-sm"
                           rows="3"
                           placeholder="Condiciones, términos adicionales..."
                           @bind-Value="Model.Notes" />
        </div>
    </div>

</FormSection>

@code {
    [Parameter, EditorRequired] public QuoteDto Model { get; set; } = default!;
}
