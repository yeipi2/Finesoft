@* Card del historial de cambios, colapsable al hacer click en el header *@
@using fs_front.DTO

<div class="card">
    <div class="card-header bg-info text-white"
         style="cursor: pointer; user-select: none;"
         @onclick="Toggle">
        <div class="d-flex justify-content-between align-items-center">
            <h5 class="mb-0">
                <i class="bi bi-clock-history"></i> Historial de Cambios
                @if (History != null && History.Any())
                {
                    <span class="badge bg-light text-dark ms-2">@History.Count</span>
                }
            </h5>
            <i class="bi @(_collapsed ? "bi-chevron-down" : "bi-chevron-up") fs-5"></i>
        </div>
    </div>
    <div class="collapse @(_collapsed ? "" : "show")">
        <div class="card-body" style="max-height: 400px; overflow-y: auto;">
            @if (History != null && History.Any())
            {
                @foreach (var h in History.OrderByDescending(x => x.ChangedAt))
                {
                    <div class="mb-3">
                        <div class="d-flex gap-2 align-items-start">
                            <i class="bi bi-circle-fill text-primary" style="font-size: 0.5rem; margin-top: 0.5rem;"></i>
                            <div class="flex-grow-1">
                                <div class="d-flex justify-content-between align-items-start">
                                    <div>
                                        <strong>@h.UserName</strong>
                                        <span class="text-muted"> - @h.Action</span>
                                    </div>
                                    <small class="text-muted">@h.ChangedAt.ToString("dd/MM/yyyy HH:mm")</small>
                                </div>
                                @if (!string.IsNullOrEmpty(h.OldValue) || !string.IsNullOrEmpty(h.NewValue))
                                {
                                    <small class="text-muted">
                                        @if (!string.IsNullOrEmpty(h.OldValue))
                                        {
                                            <span>De: <span class="text-decoration-line-through">@h.OldValue</span></span>
                                        }
                                        @if (!string.IsNullOrEmpty(h.NewValue))
                                        {
                                            <span> A: <strong>@h.NewValue</strong></span>
                                        }
                                    </small>
                                }
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <p class="text-muted text-center py-3">No hay historial disponible.</p>
            }
        </div>
    </div>
</div>

@code {
    [Parameter, EditorRequired] public List<TicketHistoryDto>? History { get; set; }

    private bool _collapsed = true;

    private void Toggle() => _collapsed = !_collapsed;
}
