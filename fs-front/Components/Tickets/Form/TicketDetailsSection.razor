@* Sección acordeón: Detalles y Asignación (Proyecto, Prioridad, Estado, Asignado, Horas) *@
@using fs_front.DTO

<div class="accordion-item">
    <h2 class="accordion-header" id="headingDetails">
        <button class="accordion-button collapsed @(IsComplete ? "" : "text-danger")"
                type="button"
                data-bs-toggle="collapse"
                data-bs-target="#collapseDetails"
                aria-expanded="false"
                aria-controls="collapseDetails">
            <i class="bi bi-sliders me-2"></i>
            <strong>Detalles y Asignación</strong>
            @if (!IsComplete)
            {
                <span class="badge bg-danger ms-2">Incompleto</span>
            }
            else
            {
                <i class="bi bi-check-circle-fill text-success ms-2"></i>
            }
        </button>
    </h2>
    <div id="collapseDetails"
         class="accordion-collapse collapse"
         aria-labelledby="headingDetails"
         data-bs-parent="#ticketAccordion">
        <div class="accordion-body">
            <div class="row g-3">

                @* ── Proyecto (autocomplete) ── *@
                <div class="col-12">
                    <label for="ProjectSearch" class="form-label small fw-bold">
                        Proyecto <span class="text-danger">*</span>
                    </label>

                    @if (IsLoadingProjects)
                    {
                        <div class="d-flex align-items-center">
                            <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                            <span>Cargando proyectos...</span>
                        </div>
                    }
                    else if (Projects == null || !Projects.Any())
                    {
                        <div class="alert alert-warning mb-0 py-2">
                            <i class="bi bi-exclamation-triangle me-2"></i>
                            No hay proyectos disponibles. Contacta a un administrador.
                        </div>
                    }
                    else
                    {
                        <div class="position-relative">
                            <input type="text"
                                   class="form-control form-control-sm"
                                   id="ProjectSearch"
                                   placeholder="Buscar proyecto por nombre..."
                                   value="@ProjectSearchText"
                                   @oninput="e => OnProjectSearchInput.InvokeAsync(e)"
                                   @onkeydown="HandleKeyDown"
                                   @onfocus="() => _showSuggestions = true"
                                   autocomplete="off" />

                            @if (_showSuggestions && FilteredProjects.Any())
                            {
                                <div class="autocomplete-dropdown">
                                    @foreach (var project in FilteredProjects.Take(10))
                                    {
                                        <div class="autocomplete-item" @onclick="() => HandleSelectProject(project)">
                                            <strong>@project.Name</strong>
                                            @if (!string.IsNullOrEmpty(project.Client?.CompanyName))
                                            {
                                                <span class="text-muted"> — @project.Client.CompanyName</span>
                                            }
                                        </div>
                                    }
                                </div>
                            }
                        </div>

                        @if (Model.ProjectId.HasValue && Model.ProjectId > 0 && SelectedProject != null)
                        {
                            <small class="text-success mt-1 d-block">
                                <i class="bi bi-check-circle-fill me-1"></i>
                                Proyecto seleccionado: <strong>@SelectedProject.Name</strong>
                                @if (!string.IsNullOrEmpty(SelectedProject.Client?.CompanyName))
                                {
                                    <span> (@SelectedProject.Client.CompanyName)</span>
                                }
                            </small>
                        }

                        @if (!Model.ProjectId.HasValue && !string.IsNullOrEmpty(ProjectSearchText))
                        {
                            <small class="text-danger mt-1 d-block">
                                <i class="bi bi-exclamation-triangle me-1"></i>
                                Debe seleccionar un proyecto de la lista
                            </small>
                        }
                    }
                </div>

                @* ── Prioridad ── *@
                <div class="col-md-4">
                    <label for="Priority" class="form-label small fw-bold">
                        Prioridad <span class="text-danger">*</span>
                    </label>
                    <select id="Priority" class="form-select form-select-sm" @bind="Model.Priority">
                        <option value="Baja">Baja</option>
                        <option value="Media">Media</option>
                        <option value="Alta">Alta</option>
                        <option value="Urgente">Urgente</option>
                    </select>
                    <ValidationMessage For="@(() => Model.Priority)" />
                </div>

                @* ── Estado ── *@
                <div class="col-md-4">
                    <label for="Status" class="form-label small fw-bold">
                        Estado <span class="text-danger">*</span>
                    </label>
                    <select id="Status" class="form-select form-select-sm" @bind="Model.Status">
                        <option value="Abierto">Abierto</option>
                        <option value="En Progreso">En Progreso</option>
                        <option value="En Revisión">En Revisión</option>
                        <option value="Cerrado">Cerrado</option>
                    </select>
                    <ValidationMessage For="@(() => Model.Status)" />
                </div>

                @* ── Asignar a ── *@
                <div class="col-md-4">
                    <label for="AssignedTo" class="form-label small fw-bold">Asignar a</label>
                    @if (IsLoadingUsers)
                    {
                        <div class="d-flex align-items-center">
                            <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                            <span>Cargando...</span>
                        </div>
                    }
                    else
                    {
                        <select id="AssignedTo" class="form-select form-select-sm"
                                @bind="Model.AssignedToUserId"
                                disabled="@(Employees == null || !Employees.Any())">
                            <option value="">-- Sin asignar --</option>
                            @if (Employees != null)
                            {
                                @foreach (var emp in Employees)
                                {
                                    <option value="@emp.Id">@emp.UserName</option>
                                }
                            }
                        </select>
                        @if (Employees == null || !Employees.Any())
                        {
                            <small class="text-muted">No hay empleados disponibles</small>
                        }
                    }
                </div>

                @* ── Horas Estimadas ── *@
                <div class="col-md-6">
                    <label for="EstimatedHours" class="form-label small fw-bold">Horas Estimadas</label>
                    <InputNumber id="EstimatedHours" class="form-control form-control-sm"
                                 placeholder="0.00" @bind-Value="Model.EstimatedHours" />
                    <ValidationMessage For="@(() => Model.EstimatedHours)" />
                </div>

                @* ── Horas Reales (solo edición) ── *@
                @if (IsEditMode)
                {
                    <div class="col-md-6">
                        <label for="ActualHours" class="form-label small fw-bold">Horas Reales</label>
                        <InputNumber id="ActualHours" class="form-control form-control-sm"
                                     placeholder="0.00" @bind-Value="Model.ActualHours" />
                        <ValidationMessage For="@(() => Model.ActualHours)" />
                    </div>
                }

            </div>
        </div>
    </div>
</div>

<style>
    .autocomplete-dropdown {
        position: absolute;
        top: 100%;
        left: 0;
        right: 0;
        z-index: 1000;
        max-height: 300px;
        overflow-y: auto;
        background-color: white;
        border: 1px solid #ced4da;
        border-top: none;
        border-radius: 0 0 0.25rem 0.25rem;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    .autocomplete-item {
        padding: 0.5rem 0.75rem;
        cursor: pointer;
        border-bottom: 1px solid #f0f0f0;
        font-size: 0.875rem;
    }

        .autocomplete-item:hover {
            background-color: #f8f9fa;
        }

        .autocomplete-item:last-child {
            border-bottom: none;
        }
</style>

@code {
    [Parameter, EditorRequired] public TicketDto Model { get; set; } = default!;
    [Parameter] public bool IsComplete { get; set; }
    [Parameter] public bool IsEditMode { get; set; }

    // Proyectos
    [Parameter] public bool IsLoadingProjects { get; set; }
    [Parameter] public List<ProjectDetailDto>? Projects { get; set; }
    [Parameter] public List<ProjectDetailDto> FilteredProjects { get; set; } = new();
    [Parameter] public ProjectDetailDto? SelectedProject { get; set; }
    [Parameter] public string ProjectSearchText { get; set; } = string.Empty;

    // Empleados
    [Parameter] public bool IsLoadingUsers { get; set; }
    [Parameter] public List<UserDto>? Employees { get; set; }

    // Callbacks
    [Parameter] public EventCallback<ChangeEventArgs> OnProjectSearchInput { get; set; }
    [Parameter] public EventCallback<ProjectDetailDto> OnProjectSelected { get; set; }

    private bool _showSuggestions = false;

    private async Task HandleSelectProject(ProjectDetailDto project)
    {
        _showSuggestions = false;
        await OnProjectSelected.InvokeAsync(project);
    }

    private void HandleKeyDown(KeyboardEventArgs e)
    {
        if (e.Key == "Escape") _showSuggestions = false;
    }
}
