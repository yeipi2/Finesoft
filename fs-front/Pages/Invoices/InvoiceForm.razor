@code {
    [Parameter] public int? InvoiceId { get; set; }

    private InvoiceDto _invoiceDto = new();
    private List<ClientDto> _allClients = new();
    private List<ClientDto> _filteredClients = new();
    private ClientDto? _selectedClient;
    private string _clientSearchText = string.Empty;
    private bool _showSuggestions = false;

    private List<TicketDetailDto>? _availableTickets;
    private bool _isLoadingTickets = false;
    private bool _isLoadingClients = false;

    private Dictionary<int, string> _ticketSearchTexts = new();
    private Dictionary<int, List<TicketDetailDto>> _filteredTicketsCache = new();
    private HashSet<int> _ticketSuggestionsVisible = new();

    private decimal _calculatedSubtotal = 0;
    private decimal _calculatedTax = 0;
    private decimal _calculatedTotal = 0;

    private bool _isSaving = false;
    private bool _isLoading = false;
    private string? _errorMessage;
    private bool _isEditMode => InvoiceId.HasValue;

    private bool _section1Complete = false;
    private bool _section2Complete = false;
    private bool _allSectionsComplete => _section1Complete && _section2Complete;

    private readonly List<string> _paymentMethods = new()
    {
        "Transferencia", "Efectivo", "Tarjeta", "Cheque", "Depósito"
    };

    private string FormatCurrency(decimal amount) => string.Format("$ {0:N2}", amount);

    protected override async Task OnInitializedAsync()
    {
        _isLoading = true;
        StateHasChanged();

        await LoadInitialData();

        if (_isEditMode)
            await LoadInvoice();
        else
            _invoiceDto = new InvoiceDto
            {
                Status = "Borrador",
                InvoiceType = "Event",
                InvoiceDate = DateTime.Now,
                DueDate = DateTime.Now.AddDays(30)
            };

        RecalculateTotals();
        ValidateSections();

        _isLoading = false;
        StateHasChanged();
    }

    private void ValidateSections()
    {
        _section1Complete = _invoiceDto.ClientId > 0 &&
                            !string.IsNullOrWhiteSpace(_invoiceDto.InvoiceType) &&
                            _invoiceDto.InvoiceDate != default &&
                            _invoiceDto.DueDate != default &&
                            !string.IsNullOrWhiteSpace(_invoiceDto.Status);

        _section2Complete = _invoiceDto.Items.Any() &&
                            _invoiceDto.Items.All(i =>
                                !string.IsNullOrWhiteSpace(i.Description) &&
                                i.Quantity > 0 && i.UnitPrice >= 0);
        StateHasChanged();
    }

    private async Task LoadInitialData()
    {
        _isLoadingClients = true;
        _isLoadingTickets = true;
        StateHasChanged();

        try
        {
            var clientsTask = ClientApiService.GetClientsAsync();
            var ticketsTask = TicketApiService.GetTicketsAsync();
            var quotesTask = QuoteApiService.GetQuotesAsync();
            var ticketsInUseTask = InvoiceApiService.GetTicketsInUseAsync();

            await Task.WhenAll(clientsTask, ticketsTask, quotesTask, ticketsInUseTask);

            _allClients = (await clientsTask) ?? new List<ClientDto>();
            _filteredClients = new List<ClientDto>();

            var ticketsInInvoices = (await ticketsInUseTask)?.ToHashSet() ?? new HashSet<int>();
            var allQuotes = await quotesTask;
            var allTickets = await ticketsTask;

            var ticketsInQuotes = allQuotes?
                .SelectMany(q => q.Items)
                .Where(i => i.TicketId.HasValue)
                .Select(i => i.TicketId!.Value)
                .Distinct().ToHashSet() ?? new HashSet<int>();

            var ticketsInCurrentInvoice = new HashSet<int>();
            if (_isEditMode && InvoiceId.HasValue)
            {
                var current = await InvoiceApiService.GetInvoiceByIdAsync(InvoiceId.Value);
                if (current != null)
                    ticketsInCurrentInvoice = current.Items
                        .Where(i => i.TicketId.HasValue && i.TicketId.Value > 0)
                        .Select(i => i.TicketId!.Value).ToHashSet();
            }

            _availableTickets = allTickets?
                .Where(t =>
                    t.Status?.Equals("Cerrado", StringComparison.OrdinalIgnoreCase) == true &&
                    !ticketsInQuotes.Contains(t.Id) &&
                    (!ticketsInInvoices.Contains(t.Id) || ticketsInCurrentInvoice.Contains(t.Id)))
                .OrderByDescending(t => t.ClosedAt ?? t.UpdatedAt ?? t.CreatedAt)
                .ToList() ?? new List<TicketDetailDto>();
        }
        catch (Exception ex)
        {
            _allClients = new List<ClientDto>();
            _filteredClients = new List<ClientDto>();
            _availableTickets = new List<TicketDetailDto>();
            _errorMessage = "Error al cargar datos iniciales.";
            Console.WriteLine($"Error: {ex.Message}");
        }
        finally
        {
            _isLoadingClients = false;
            _isLoadingTickets = false;
            StateHasChanged();
        }
    }

    private async Task LoadInvoice()
    {
        try
        {
            var invoice = await InvoiceApiService.GetInvoiceByIdAsync(InvoiceId!.Value);
            if (invoice != null)
            {
                _invoiceDto = new InvoiceDto
                {
                    Id = invoice.Id,
                    ClientId = invoice.ClientId,
                    QuoteId = invoice.QuoteId,
                    InvoiceDate = invoice.InvoiceDate,
                    DueDate = invoice.DueDate,
                    InvoiceType = invoice.InvoiceType,
                    Status = invoice.Status,
                    PaymentMethod = invoice.PaymentMethod,
                    Notes = invoice.Notes,
                    Items = invoice.Items.Select(i => new InvoiceItemDto
                    {
                        Id = i.Id,
                        Description = i.Description,
                        Quantity = i.Quantity,
                        UnitPrice = i.UnitPrice,
                        ServiceId = i.ServiceId,
                        TicketId = i.TicketId
                    }).ToList()
                };

                if (invoice.ClientId > 0)
                {
                    _selectedClient = _allClients.FirstOrDefault(c => c.Id == invoice.ClientId);
                    if (_selectedClient != null)
                        _clientSearchText = _selectedClient.CompanyName;
                }

                for (int i = 0; i < _invoiceDto.Items.Count; i++)
                {
                    var item = _invoiceDto.Items[i];
                    if (item.TicketId.HasValue && item.TicketId.Value > 0)
                    {
                        var ticket = _availableTickets?.FirstOrDefault(t => t.Id == item.TicketId.Value);
                        _ticketSearchTexts[i] = ticket != null ? $"#{ticket.Id} - {ticket.Title}" : string.Empty;
                    }
                    else _ticketSearchTexts[i] = string.Empty;

                    _filteredTicketsCache[i] = new List<TicketDetailDto>();
                }

                RecalculateTotals();
            }
        }
        catch (Exception ex) { _errorMessage = $"Error al cargar factura: {ex.Message}"; }
    }

    private string GetTicketSearchText(InvoiceItemDto item)
    {
        var index = _invoiceDto.Items.IndexOf(item);
        if (index >= 0 && _ticketSearchTexts.ContainsKey(index)) return _ticketSearchTexts[index];
        if (item.TicketId.HasValue && item.TicketId.Value > 0)
        {
            var ticket = _availableTickets?.FirstOrDefault(t => t.Id == item.TicketId.Value);
            if (ticket != null) return $"#{ticket.Id} - {ticket.Title}";
        }
        return string.Empty;
    }

    private void OnTicketSearchInput(ChangeEventArgs e, InvoiceItemDto item, int index)
    {
        var searchText = e.Value?.ToString() ?? string.Empty;
        _ticketSearchTexts[index] = searchText;

        if (string.IsNullOrWhiteSpace(searchText))
        {
            _filteredTicketsCache[index] = new List<TicketDetailDto>();
            _ticketSuggestionsVisible.Remove(index);
            item.TicketId = null;
        }
        else
        {
            _filteredTicketsCache[index] = _availableTickets?
                .Where(t =>
                    t.Id.ToString().Contains(searchText, StringComparison.OrdinalIgnoreCase) ||
                    t.Title.Contains(searchText, StringComparison.OrdinalIgnoreCase) ||
                    t.ClientName.Contains(searchText, StringComparison.OrdinalIgnoreCase))
                .OrderBy(t => t.Id).ToList() ?? new List<TicketDetailDto>();
            _ticketSuggestionsVisible.Add(index);
        }
        StateHasChanged();
    }

    private List<TicketDetailDto> GetFilteredTickets(InvoiceItemDto item, int index) =>
        _filteredTicketsCache.ContainsKey(index) ? _filteredTicketsCache[index] : new List<TicketDetailDto>();

    private bool IsTicketSuggestionsVisible(int index) => _ticketSuggestionsVisible.Contains(index);

    private void OnTicketFocus(int index)
    {
        var text = _ticketSearchTexts.ContainsKey(index) ? _ticketSearchTexts[index] : string.Empty;
        if (!string.IsNullOrWhiteSpace(text)) { _ticketSuggestionsVisible.Add(index); StateHasChanged(); }
