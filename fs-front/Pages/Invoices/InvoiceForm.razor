@using fs_front.DTO
@using System.Globalization

<section class="container-fluid px-3 py-2">
    <EditForm Model="_invoiceDto" OnValidSubmit="HandleSubmit">
        <DataAnnotationsValidator />

        <div class="row mb-3">
            <div class="col-md-6">
                <label for="ClientSearch" class="form-label fw-bold small">Cliente *</label>
                @if (_isLoadingClients)
                {
                    <div class="d-flex align-items-center">
                        <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                        <span>Cargando clientes...</span>
                    </div>
                }
                else
                {
                    <div class="position-relative">
                        <input type="text"
                               class="form-control"
                               id="ClientSearch"
                               placeholder="Buscar cliente por nombre..."
                               value="@_clientSearchText"
                               @oninput="OnClientSearchInput"
                               @onkeydown="OnKeyDown"
                               @onfocus="OnClientFocus"
                               @onblur="OnClientBlur"
                               autocomplete="off" />

                        @if (_showSuggestions && !string.IsNullOrWhiteSpace(_clientSearchText) && _filteredClients.Any())
                        {
                            <div class="autocomplete-dropdown">
                                @foreach (var client in _filteredClients.Take(10))
                                {
                                    <div class="autocomplete-item"
                                         @onmousedown="@(() => SelectClient(client))"
                                         @onmousedown:preventDefault>
                                        @client.CompanyName
                                    </div>
                                }
                            </div>
                        }
                    </div>

                    @if (_invoiceDto.ClientId > 0 && _selectedClient != null)
                    {
                        <small class="text-success mt-1 d-block">
                            ✓ Cliente seleccionado: <strong>@_selectedClient.CompanyName</strong>
                        </small>
                    }

                    @if (_invoiceDto.ClientId == 0 && !string.IsNullOrEmpty(_clientSearchText))
                    {
                        <div class="form-text text-danger mt-1">
                            <i class="bi bi-exclamation-triangle"></i> Debe seleccionar un cliente de la lista
                        </div>
                    }
                }
                <ValidationMessage For="@(() => _invoiceDto.ClientId)" />
            </div>

            <div class="col-md-6">
                <label for="InvoiceType" class="form-label fw-bold small">Tipo de Factura *</label>
                <select id="InvoiceType" class="form-select" @bind="_invoiceDto.InvoiceType">
                    <option value="Event">Por Evento</option>
                    <option value="Monthly">Mensual</option>
                </select>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-4">
                <label for="InvoiceDate" class="form-label fw-bold small">Fecha de Factura</label>
                <InputDate id="InvoiceDate" class="form-control" @bind-Value="_invoiceDto.InvoiceDate" />
            </div>

            <div class="col-md-4">
                <label for="DueDate" class="form-label fw-bold small">Fecha de Vencimiento</label>
                <InputDate id="DueDate" class="form-control" @bind-Value="_invoiceDto.DueDate" />
            </div>

            <div class="col-md-4">
                <label for="Status" class="form-label fw-bold small">Estado *</label>
                <select id="Status" class="form-select" @bind="_invoiceDto.Status">
                    <option value="Pendiente">Pendiente</option>
                    <option value="Pagada">Pagada</option>
                    <option value="Vencida">Vencida</option>
                    <option value="Cancelada">Cancelada</option>
                </select>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-12">
                <label for="PaymentMethod" class="form-label fw-bold small">Método de Pago</label>
                <InputText id="PaymentMethod" class="form-control"
                           placeholder="Transferencia, Efectivo, Tarjeta..."
                           @bind-Value="_invoiceDto.PaymentMethod" />
            </div>
        </div>

        <div class="mb-3">
            <div class="d-flex justify-content-between align-items-center mb-2">
                <label class="form-label fw-bold small mb-0">Artículos de la Factura</label>
                <button type="button" class="btn btn-sm btn-primary" @onclick="AddItem">
                    <i class="bi bi-plus-lg"></i> Agregar Artículo
                </button>
            </div>

            <div class="border rounded p-3 mb-3 bg-light" style="max-height: 280px; overflow-y: auto;">
                @if (!_invoiceDto.Items.Any())
                {
                    <div class="text-center text-muted py-3">
                        <i class="bi bi-inbox fs-3"></i>
                        <p class="mb-0 mt-2">No hay artículos. Agregue al menos uno.</p>
                    </div>
                }
                else
                {
                    @foreach (var (item, index) in _invoiceDto.Items.Select((item, i) => (item, i)))
                    {
                        <div class="card mb-2 shadow-sm">
                            <div class="card-body p-2">
                                <div class="d-flex justify-content-between align-items-start mb-2">
                                    <h6 class="mb-0 text-primary small">
                                        <i class="bi bi-card-list me-1"></i>
                                        Artículo #@(index + 1)
                                    </h6>
                                    <button type="button" class="btn btn-sm btn-outline-danger py-0 px-2"
                                            @onclick="() => RemoveItem(index)"
                                            title="Eliminar artículo">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </div>

                                <div class="row g-2">
                                    <div class="col-md-12">
                                        <label class="form-label small mb-1">Descripción *</label>
                                        <InputText class="form-control form-control-sm"
                                                   @bind-Value="item.Description"
                                                   placeholder="Descripción del servicio o producto" />
                                    </div>

                                    <div class="col-md-4">
                                        <label class="form-label small mb-1">Cantidad *</label>
                                        <InputNumber class="form-control form-control-sm"
                                                     @bind-Value="item.Quantity"
                                                     @bind-Value:after="RecalculateTotals" />
                                    </div>

                                    <div class="col-md-4">
                                        <label class="form-label small mb-1">Precio Unitario *</label>
                                        <InputNumber class="form-control form-control-sm"
                                                     @bind-Value="item.UnitPrice"
                                                     @bind-Value:after="RecalculateTotals" />
                                    </div>

                                    <div class="col-md-4">
                                        <label class="form-label small mb-1">Subtotal</label>
                                        <input type="text" class="form-control form-control-sm bg-white"
                                               value="@FormatCurrency(item.Quantity * item.UnitPrice)"
                                               readonly />
                                    </div>

                                    @* ⭐ FILTRO CORREGIDO: Incluye tickets de la factura actual *@
                                    <div class="col-md-12">
                                        <label class="form-label small mb-1">
                                            Ticket Asociado (Opcional)
                                            <i class="bi bi-info-circle text-muted"
                                               title="Solo se muestran tickets cerrados sin cotización asociada"></i>
                                        </label>

                                        @if (_isLoadingTickets)
                                        {
                                            <div class="d-flex align-items-center">
                                                <span class="spinner-border spinner-border-sm me-2"></span>
                                                <span class="small">Cargando tickets...</span>
                                            </div>
                                        }
                                        else if (_availableTickets == null || !_availableTickets.Any())
                                        {
                                            <select class="form-select form-select-sm" disabled>
                                                <option value="">-- No hay tickets disponibles --</option>
                                            </select>
                                            <small class="text-muted">
                                                <i class="bi bi-exclamation-circle"></i>
                                                Solo se pueden asociar tickets cerrados sin cotización
                                            </small>
                                        }
                                        else
                                        {
                                            <select class="form-select form-select-sm"
                                                    @bind="item.TicketId"
                                                    @bind:after="() => OnTicketSelected(item)">
                                                <option value="">-- Sin ticket asociado --</option>
                                                @foreach (var ticket in _availableTickets)
                                                {
                                                    <option value="@ticket.Id">
                                                        #@ticket.Id - @ticket.Title
                                                        (@ticket.ClientName - @ticket.ActualHours.ToString("0.0")h)
                                                    </option>
                                                }
                                            </select>

                                            @* ⭐ Mostrar info del ticket seleccionado *@
                                            @if (item.TicketId.HasValue && item.TicketId.Value > 0)
                                            {
                                                var selectedTicket = _availableTickets.FirstOrDefault(t => t.Id == item.TicketId.Value);
                                                if (selectedTicket != null)
                                                {
                                                    <div class="alert alert-info p-2 mt-2 mb-0">
                                                        <small>
                                                            <i class="bi bi-ticket-perforated"></i>
                                                            <strong>@selectedTicket.Title</strong><br />
                                                            Cliente: @selectedTicket.ClientName |
                                                            Horas: @selectedTicket.ActualHours.ToString("0.0")h |
                                                            Costo: $@((selectedTicket.ActualHours * selectedTicket.HourlyRate).ToString("N2"))
                                                        </small>
                                                    </div>
                                                }
                                            }
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                }
            </div>
        </div>

        <div class="mb-3">
            <label for="Notes" class="form-label fw-bold small">Notas Adicionales</label>
            <InputTextArea id="Notes" class="form-control" rows="2"
                           placeholder="Términos de pago, condiciones adicionales..."
                           @bind-Value="_invoiceDto.Notes" />
        </div>

        <div class="card bg-light border-primary mb-3">
            <div class="card-body p-2">
                <div class="row justify-content-end">
                    <div class="col-md-5 col-lg-4">
                        <div class="d-flex justify-content-between mb-1">
                            <span class="small">Subtotal:</span>
                            <strong class="small">@FormatCurrency(_calculatedSubtotal)</strong>
                        </div>
                        <div class="d-flex justify-content-between mb-1">
                            <span class="small">IVA (16%):</span>
                            <strong class="small">@FormatCurrency(_calculatedTax)</strong>
                        </div>
                        <hr class="my-1" />
                        <div class="d-flex justify-content-between">
                            <span class="fw-bold">Total:</span>
                            <strong class="text-success h5 mb-0">@FormatCurrency(_calculatedTotal)</strong>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="d-flex justify-content-end gap-2">
            <button type="button" class="btn btn-secondary" @onclick="Cancel">
                <i class="bi bi-x-lg me-1"></i>
                Cancelar
            </button>
            <button type="submit" class="btn btn-primary"
                    disabled="@(_isSaving || !_invoiceDto.Items.Any() || _invoiceDto.ClientId == 0)">
                @if (_isSaving)
                {
                    <span class="spinner-border spinner-border-sm me-2"></span>
                }
                <i class="bi bi-check-lg me-1"></i>
                @(_isEditMode ? "Actualizar" : "Crear") Factura
            </button>
        </div>

        @if (!string.IsNullOrEmpty(_errorMessage))
        {
            <div class="alert alert-danger mt-2 py-2">
                <i class="bi bi-exclamation-triangle-fill me-2"></i>
                @_errorMessage
            </div>
        }
    </EditForm>
</section>

