@using fs_front.DTO

<section class="container px-2" style="max-height: 500px; overflow-y: auto;">
    <EditForm Model="_invoiceDto" OnValidSubmit="HandleSubmit">
        <DataAnnotationsValidator />

        <div class="row mb-3">
            <div class="col-md-6">
                <label for="ClientSearch" class="form-label fw-bold small">Cliente *</label>
                @if (_isLoadingClients)
                {
                    <div class="d-flex align-items-center">
                        <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                        <span>Cargando clientes...</span>
                    </div>
                }
                else
                {
                    <div class="position-relative">
                        <input type="text"
                               class="form-control"
                               id="ClientSearch"
                               placeholder="Buscar cliente por nombre..."
                               value="@_clientSearchText"
                               @oninput="OnClientSearchInput"
                               @onkeydown="OnKeyDown"
                               @onclick="OnClientClick"
                               autocomplete="off" />

                        @if (_showSuggestions && _filteredClients.Any())
                        {
                            <div class="autocomplete-dropdown">
                                @foreach (var client in _filteredClients.Take(10))
                                {
                                    <div class="autocomplete-item" @onclick="() => SelectClient(client)">
                                        @client.CompanyName
                                    </div>
                                }
                            </div>
                        }
                    </div>

                    @if (_invoiceDto.ClientId > 0 && _selectedClient != null)
                    {
                        <small class="text-success mt-1 d-block">
                            ✓ Cliente seleccionado: <strong>@_selectedClient.CompanyName</strong>
                        </small>
                    }

                    @if (_invoiceDto.ClientId == 0 && !string.IsNullOrEmpty(_clientSearchText))
                    {
                        <div class="form-text text-danger mt-2">
                            <i class="bi bi-exclamation-triangle"></i> Debe seleccionar un cliente de la lista
                        </div>
                    }
                }
                <ValidationMessage For="@(() => _invoiceDto.ClientId)" />
            </div>

            <div class="col-md-6">
                <label for="InvoiceType" class="form-label fw-bold small">Tipo de Factura *</label>
                <select id="InvoiceType" class="form-select" @bind="_invoiceDto.InvoiceType">
                    <option value="Event">Por Evento</option>
                    <option value="Monthly">Mensual</option>
                </select>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-4">
                <label for="InvoiceDate" class="form-label fw-bold small">Fecha de Factura</label>
                <InputDate id="InvoiceDate" class="form-control" @bind-Value="_invoiceDto.InvoiceDate" />
            </div>

            <div class="col-md-4">
                <label for="DueDate" class="form-label fw-bold small">Fecha de Vencimiento</label>
                <InputDate id="DueDate" class="form-control" @bind-Value="_invoiceDto.DueDate" />
            </div>

            <div class="col-md-4">
                <label for="Status" class="form-label fw-bold small">Estado *</label>
                <select id="Status" class="form-select" @bind="_invoiceDto.Status">
                    <option value="Pendiente">Pendiente</option>
                    <option value="Pagada">Pagada</option>
                    <option value="Vencida">Vencida</option>
                    <option value="Cancelada">Cancelada</option>
                </select>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-12">
                <label for="PaymentMethod" class="form-label fw-bold small">Método de Pago</label>
                <InputText id="PaymentMethod" class="form-control"
                           placeholder="Transferencia, Efectivo, Tarjeta..."
                           @bind-Value="_invoiceDto.PaymentMethod" />
            </div>
        </div>

        <div class="mb-3">
            <label class="form-label fw-bold small">Artículos de la Factura</label>
            <div class="border rounded p-3 mb-3" style="max-height: 300px; overflow-y: auto;">
                @foreach (var (item, index) in _invoiceDto.Items.Select((item, i) => (item, i)))
                {
                    <div class="card mb-2">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start mb-2">
                                <h6 class="mb-0">Artículo #@(index + 1)</h6>
                                <button type="button" class="btn btn-sm btn-outline-danger"
                                        @onclick="() => RemoveItem(index)">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </div>

                            <div class="row g-2">
                                <div class="col-md-12">
                                    <label class="form-label small">Descripción *</label>
                                    <InputText class="form-control form-control-sm"
                                               @bind-Value="item.Description"
                                               placeholder="Descripción del servicio o producto" />
                                </div>

                                <div class="col-md-4">
                                    <label class="form-label small">Cantidad *</label>
                                    <InputNumber class="form-control form-control-sm"
                                                 @bind-Value="item.Quantity"
                                                 @bind-Value:after="RecalculateTotals" />
                                </div>

                                <div class="col-md-4">
                                    <label class="form-label small">Precio Unitario *</label>
                                    <InputNumber class="form-control form-control-sm"
                                                 @bind-Value="item.UnitPrice"
                                                 @bind-Value:after="RecalculateTotals" />
                                </div>

                                <div class="col-md-4">
                                    <label class="form-label small">Subtotal</label>
                                    <input type="text" class="form-control form-control-sm"
                                           value="@((item.Quantity * item.UnitPrice).ToString("C"))"
                                           readonly />
                                </div>

                                @*                                 <div class="col-md-6">
                                    <label class="form-label small">Servicio (Opcional)</label>
                                    <select class="form-select form-select-sm" @bind="item.ServiceId">
                                        <option value="">-- Sin servicio asociado --</option>
                                        @if (_services != null)
                                        {
                                            @foreach (var service in _services)
                                            {
                                                <option value="@service.Id">@service.Name -
                                                    $@service.HourlyRate</option>
                                            }
                                        }
                                    </select>
                                </div> *@

                                <div class="col-md-6">
                                    <label class="form-label small">Ticket (Opcional)</label>
                                    <select class="form-select form-select-sm" @bind="item.TicketId">
                                        <option value="">-- Sin ticket asociado --</option>
                                        @if (_tickets != null)
                                        {
                                            @foreach (var ticket in _tickets)
                                            {
                                                <option value="@ticket.Id">Ticket #@ticket.Id - @ticket.Title</option>
                                            }
                                        }
                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>
                }

                @if (!_invoiceDto.Items.Any())
                {
                    <div class="text-center text-muted py-3">
                        <i class="bi bi-inbox fs-4"></i>
                        <p>No hay artículos. Agregue al menos uno.</p>
                    </div>
                }
            </div>

            <button type="button" class="btn btn-sm btn-outline-primary" @onclick="AddItem">
                <i class="bi bi-plus-lg"></i> Agregar Artículo
            </button>
        </div>

        <div class="mb-3">
            <label for="Notes" class="form-label fw-bold small">Notas Adicionales</label>
            <InputTextArea id="Notes" class="form-control" rows="3"
                           placeholder="Términos de pago, condiciones adicionales..."
                           @bind-Value="_invoiceDto.Notes" />
        </div>

        <div class="card bg-light mb-3">
            <div class="card-body">
                <div class="row">
                    <div class="col-md-8"></div>
                    <div class="col-md-4">
                        <div class="d-flex justify-content-between mb-2">
                            <span>Subtotal:</span>
                            <strong>@_calculatedSubtotal.ToString("C")</strong>
                        </div>
                        <div class="d-flex justify-content-between mb-2">
                            <span>IVA (16%):</span>
                            <strong>@_calculatedTax.ToString("C")</strong>
                        </div>
                        <hr />
                        <div class="d-flex justify-content-between">
                            <span class="h5">Total:</span>
                            <strong class="h5 text-success">@_calculatedTotal.ToString("C")</strong>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="d-flex justify-content-end gap-2">
            <button type="button" class="btn btn-secondary" @onclick="Cancel">Cancelar</button>
            <button type="submit" class="btn btn-primary" disabled="@(_isSaving || !_invoiceDto.Items.Any() || _invoiceDto.ClientId == 0)">
                @if (_isSaving)
                {
                    <span class="spinner-border spinner-border-sm me-2"></span>
                }
                <i class="bi bi-check-lg"></i>
                @(_isEditMode ? "Actualizar" : "Crear") Factura
            </button>
        </div>

        @if (!string.IsNullOrEmpty(_errorMessage))
        {
            <div class="alert alert-danger mt-3">
                @_errorMessage
            </div>
        }
    </EditForm>
</section>

<style>
    .autocomplete-dropdown {
        position: absolute;
        top: 100%;
        left: 0;
        right: 0;
        z-index: 1000;
        max-height: 300px;
        overflow-y: auto;
        background-color: white;
        border: 1px solid #ced4da;
        border-top: none;
        border-radius: 0 0 0.25rem 0.25rem;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    .autocomplete-item {
        padding: 0.75rem;
        cursor: pointer;
        border-bottom: 1px solid #f0f0f0;
    }

        .autocomplete-item:hover {
            background-color: #f8f9fa;
        }

        .autocomplete-item:last-child {
            border-bottom: none;
        }
</style>

@inject IInvoiceApiService InvoiceApiService
@inject IClientApiService ClientApiService
@inject IServiceApiService ServiceApiService
@inject ITicketApiService TicketApiService
@inject DialogService DialogService
@inject NotificationService NotificationService

@code {
    [Parameter] public int? InvoiceId { get; set; }

    private InvoiceDto _invoiceDto = new();
    private List<ClientDto> _allClients = new();
    private List<ClientDto> _filteredClients = new();
    private ClientDto? _selectedClient;
    private string _clientSearchText = string.Empty;
    private bool _showSuggestions = false;

    private List<ServiceDetailDto>? _services;
    private List<TicketDetailDto>? _tickets;

    private decimal _calculatedSubtotal = 0;
    private decimal _calculatedTax = 0;
    private decimal _calculatedTotal = 0;

    private bool _isSaving = false;
    private bool _isLoadingClients = false;
    private string? _errorMessage;
    private bool _isEditMode => InvoiceId.HasValue;

    protected override async Task OnInitializedAsync()
    {
        await LoadInitialData();

        if (_isEditMode)
        {
            await LoadInvoice();
        }
        else
        {
            _invoiceDto = new InvoiceDto
            {
                Status = "Pending",
                InvoiceType = "Event",
                InvoiceDate = DateTime.Now,
                DueDate = DateTime.Now.AddDays(30)
            };
        }

        RecalculateTotals();
    }

    private async Task LoadInitialData()
    {
        _isLoadingClients = true;
        StateHasChanged();

        try
        {
            var clientsTask = ClientApiService.GetClientsAsync();
            var servicesTask = ServiceApiService.GetServicesAsync();
            var ticketsTask = TicketApiService.GetTicketsAsync();

            await Task.WhenAll(clientsTask, servicesTask, ticketsTask);

            _allClients = (await clientsTask) ?? new List<ClientDto>();
            _filteredClients = _allClients;
            _services = await servicesTask;
            _tickets = await ticketsTask;
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error al cargar datos: {ex.Message}");
            _allClients = new List<ClientDto>();
            _filteredClients = new List<ClientDto>();
            _errorMessage = "Error al cargar la lista de clientes.";
        }
        finally
        {
            _isLoadingClients = false;
            StateHasChanged();
        }
    }

    private async Task LoadInvoice()
    {
        try
        {
            var invoice = await InvoiceApiService.GetInvoiceByIdAsync(InvoiceId!.Value);
            if (invoice != null)
            {
                _invoiceDto = new InvoiceDto
                {
                    Id = invoice.Id,
                    ClientId = invoice.ClientId,
                    QuoteId = invoice.QuoteId,
                    InvoiceDate = invoice.InvoiceDate,
                    DueDate = invoice.DueDate,
                    InvoiceType = invoice.InvoiceType,
                    Status = invoice.Status,
                    PaymentMethod = invoice.PaymentMethod,
                    Notes = invoice.Notes,
                    Items = invoice.Items.Select(i => new InvoiceItemDto
                    {
                        Id = i.Id,
                        Description = i.Description,
                        Quantity = i.Quantity,
                        UnitPrice = i.UnitPrice,
                        ServiceId = i.ServiceId,
                        TicketId = i.TicketId
                    }).ToList()
                };

                // Cargar el cliente seleccionado en modo edición
                if (invoice.ClientId > 0 && !string.IsNullOrEmpty(invoice.ClientName))
                {
                    _selectedClient = _allClients.FirstOrDefault(c => c.Id == invoice.ClientId);
                    _clientSearchText = invoice.ClientName;
                }

                RecalculateTotals();
            }
        }
        catch (Exception ex)
        {
            _errorMessage = $"Error al cargar factura: {ex.Message}";
        }
    }

    private void OnClientSearchInput(ChangeEventArgs e)
    {
        _clientSearchText = e.Value?.ToString() ?? string.Empty;

        if (string.IsNullOrWhiteSpace(_clientSearchText))
        {
            _filteredClients = _allClients;
            _showSuggestions = false;
            _selectedClient = null;
            _invoiceDto.ClientId = 0;
        }
        else
        {
            _filteredClients = _allClients
                .Where(c => c.CompanyName.Contains(_clientSearchText, StringComparison.OrdinalIgnoreCase))
                .OrderBy(c => c.CompanyName)
                .ToList();
            _showSuggestions = true;

            var exactMatch = _allClients.FirstOrDefault(c =>
                c.CompanyName.Equals(_clientSearchText, StringComparison.OrdinalIgnoreCase));

            if (exactMatch == null && _selectedClient != null)
            {
                _selectedClient = null;
                _invoiceDto.ClientId = 0;
            }
        }

        StateHasChanged();
    }

    private void OnKeyDown(KeyboardEventArgs e)
    {
        if (e.Key == "Escape")
        {
            _showSuggestions = false;
            StateHasChanged();
        }
    }

    private void OnClientClick()
    {
        // Solo mostrar sugerencias si hay texto escrito o si hay clientes disponibles
        if (!string.IsNullOrWhiteSpace(_clientSearchText) || _allClients.Any())
        {
            _showSuggestions = true;
            StateHasChanged();
        }
    }

    private void SelectClient(ClientDto client)
    {
        _selectedClient = client;
        _invoiceDto.ClientId = client.Id ?? 0;
        _clientSearchText = client.CompanyName;
        _showSuggestions = false;
        StateHasChanged();
    }

    private void AddItem()
    {
        _invoiceDto.Items.Add(new InvoiceItemDto
        {
            Quantity = 1,
            UnitPrice = 0
        });
        RecalculateTotals();
    }

    private void RemoveItem(int index)
    {
        _invoiceDto.Items.RemoveAt(index);
        RecalculateTotals();
    }

    private void RecalculateTotals()
    {
        _calculatedSubtotal = _invoiceDto.Items.Sum(i => i.Quantity * i.UnitPrice);
        _calculatedTax = _calculatedSubtotal * 0.16m;
        _calculatedTotal = _calculatedSubtotal + _calculatedTax;
        StateHasChanged();
    }

    private async Task HandleSubmit()
    {
        _showSuggestions = false;

        if (_invoiceDto.ClientId == 0)
        {
            _errorMessage = "Debe seleccionar un cliente de la lista.";
            return;
        }

        _isSaving = true;
        _errorMessage = null;
        StateHasChanged();

        try
        {
            if (_isEditMode)
            {
                var result = await InvoiceApiService.UpdateInvoiceAsync(InvoiceId!.Value, _invoiceDto);
                if (result.Success)
                {
                    ShowNotification("Éxito", "Factura actualizada correctamente.", NotificationSeverity.Success);
                    DialogService.Close(true);
                }
                else
                {
                    _errorMessage = result.ErrorMessage ?? "No se pudo actualizar la factura.";
                }
            }
            else
            {
                var result = await InvoiceApiService.CreateInvoiceAsync(_invoiceDto);
                if (result.Success)
                {
                    ShowNotification("Éxito", "Factura creada correctamente.", NotificationSeverity.Success);
                    DialogService.Close(true);
                }
                else
                {
                    _errorMessage = result.ErrorMessage ?? "No se pudo crear la factura.";
                }
            }
        }
        catch (Exception ex)
        {
            _errorMessage = $"Error al {(_isEditMode ? "actualizar" : "crear")} la factura: {ex.Message}";
        }
        finally
        {
            _isSaving = false;
            StateHasChanged();
        }
    }

    private void Cancel()
    {
        DialogService.Close(false);
    }

    private void ShowNotification(string title, string message, NotificationSeverity severity)
    {
        NotificationService.Notify(new NotificationMessage
        {
            Severity = severity,
            Summary = title,
            Detail = message,
            Duration = 4000
        });
    }

}
