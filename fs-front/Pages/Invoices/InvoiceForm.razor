    }

    private void ClearTicket(InvoiceItemDto item, int index)
    {
        item.TicketId = null;
        _ticketSearchTexts[index] = string.Empty;
        _filteredTicketsCache[index] = new List<TicketDetailDto>();
        StateHasChanged();
    }

    private void OnClientFocus()
    {
        if (!string.IsNullOrWhiteSpace(_clientSearchText)) _showSuggestions = true;
    }

    private async Task OnClientBlur()
    {
        await Task.Delay(200);
        _showSuggestions = false;
        StateHasChanged();
    }

    private void OnClientSearchInput(ChangeEventArgs e)
    {
        _clientSearchText = e.Value?.ToString() ?? string.Empty;

        if (string.IsNullOrWhiteSpace(_clientSearchText))
        {
            _filteredClients = new List<ClientDto>();
            _showSuggestions = false;
            _selectedClient = null;
            _invoiceDto.ClientId = 0;
        }
        else
        {
            _filteredClients = _allClients
                .Where(c => c.CompanyName.Contains(_clientSearchText, StringComparison.OrdinalIgnoreCase))
                .OrderBy(c => c.CompanyName).ToList();
            _showSuggestions = true;

            var exactMatch = _allClients.FirstOrDefault(c =>
                c.CompanyName.Equals(_clientSearchText, StringComparison.OrdinalIgnoreCase));
            if (exactMatch == null && _selectedClient != null)
            {
                _selectedClient = null;
                _invoiceDto.ClientId = 0;
            }
        }
        ValidateSections();
    }

    private void OnKeyDown(KeyboardEventArgs e)
    {
        if (e.Key == "Escape") { _showSuggestions = false; StateHasChanged(); }
    }

    private void SelectClient(ClientDto client)
    {
        _selectedClient = client;
        _invoiceDto.ClientId = client.Id ?? 0;
        _clientSearchText = client.CompanyName;
        _showSuggestions = false;
        ValidateSections();
    }

    private void AddItem()
    {
        _invoiceDto.Items.Add(new InvoiceItemDto { Quantity = 1, UnitPrice = 0 });
        var index = _invoiceDto.Items.Count - 1;
        _ticketSearchTexts[index] = string.Empty;
        _filteredTicketsCache[index] = new List<TicketDetailDto>();
        RecalculateTotals();
        ValidateSections();
    }

    private void RemoveItem(int index)
    {
        _invoiceDto.Items.RemoveAt(index);

        var newTexts = new Dictionary<int, string>();
        var newCache = new Dictionary<int, List<TicketDetailDto>>();
        var newVisible = new HashSet<int>();

        for (int i = 0; i < _invoiceDto.Items.Count; i++)
        {
            var oldKey = i < index ? i : i + 1;
            if (_ticketSearchTexts.ContainsKey(oldKey)) newTexts[i] = _ticketSearchTexts[oldKey];
            if (_filteredTicketsCache.ContainsKey(oldKey)) newCache[i] = _filteredTicketsCache[oldKey];
            if (_ticketSuggestionsVisible.Contains(oldKey)) newVisible.Add(i);
        }

        _ticketSearchTexts = newTexts;
        _filteredTicketsCache = newCache;
        _ticketSuggestionsVisible = newVisible;

        RecalculateTotals();
        ValidateSections();
    }

    private void RecalculateTotals()
    {
        _calculatedSubtotal = _invoiceDto.Items.Sum(i => i.Quantity * i.UnitPrice);
        _calculatedTax = _calculatedSubtotal * 0.16m;
        _calculatedTotal = _calculatedSubtotal + _calculatedTax;
        StateHasChanged();
    }

    private async Task HandleSubmit()
    {
        _showSuggestions = false;

        if (_invoiceDto.ClientId == 0)
        {
            _errorMessage = "Debe seleccionar un cliente de la lista.";
            return;
        }

        foreach (var item in _invoiceDto.Items)
            if (!item.TicketId.HasValue || item.TicketId.Value == 0)
                item.TicketId = null;

        _isSaving = true;
        _errorMessage = null;
        StateHasChanged();

        try
        {
            if (_isEditMode)
            {
                var result = await InvoiceApiService.UpdateInvoiceAsync(InvoiceId!.Value, _invoiceDto);
                if (result.Success) { ShowNotification("Éxito", "Factura actualizada correctamente.", NotificationSeverity.Success); DialogService.Close(true); }
                else _errorMessage = result.ErrorMessage ?? "No se pudo actualizar la factura.";
            }
            else
            {
                var result = await InvoiceApiService.CreateInvoiceAsync(_invoiceDto);
                if (result.Success) { ShowNotification("Éxito", "Factura creada correctamente.", NotificationSeverity.Success); DialogService.Close(true); }
                else _errorMessage = result.ErrorMessage ?? "No se pudo crear la factura.";
            }
        }
        catch (Exception ex) { _errorMessage = $"Error: {ex.Message}"; }
        finally { _isSaving = false; StateHasChanged(); }
    }

