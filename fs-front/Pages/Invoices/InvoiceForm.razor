    {
        var newItem = new InvoiceItemDto
        {
            Quantity = 1,
            UnitPrice = 0
        };
        _invoiceDto.Items.Add(newItem);

        var index = _invoiceDto.Items.Count - 1;
        _ticketSearchTexts[index] = string.Empty;
        _filteredTicketsCache[index] = new List<TicketDetailDto>();

        RecalculateTotals();
        ValidateSections();
    }

    private void RemoveItem(int index)
    {
        _invoiceDto.Items.RemoveAt(index);

        var newSearchTexts = new Dictionary<int, string>();
        var newFilteredCache = new Dictionary<int, List<TicketDetailDto>>();
        var newVisibleSet = new HashSet<int>();

        for (int i = 0; i < _invoiceDto.Items.Count; i++)
        {
            if (_ticketSearchTexts.ContainsKey(i < index ? i : i + 1))
            {
                newSearchTexts[i] = _ticketSearchTexts[i < index ? i : i + 1];
            }
            if (_filteredTicketsCache.ContainsKey(i < index ? i : i + 1))
            {
                newFilteredCache[i] = _filteredTicketsCache[i < index ? i : i + 1];
            }
            if (_ticketSuggestionsVisible.Contains(i < index ? i : i + 1))
            {
                newVisibleSet.Add(i);
            }
        }

        _ticketSearchTexts = newSearchTexts;
        _filteredTicketsCache = newFilteredCache;
        _ticketSuggestionsVisible = newVisibleSet;

        RecalculateTotals();
        ValidateSections();
    }

    private void RecalculateTotals()
    {
        _calculatedSubtotal = _invoiceDto.Items.Sum(i => i.Quantity * i.UnitPrice);
        _calculatedTax = _calculatedSubtotal * 0.16m;
        _calculatedTotal = _calculatedSubtotal + _calculatedTax;
        StateHasChanged();
    }

    private async Task HandleSubmit()
    {
        _showSuggestions = false;

        if (_invoiceDto.ClientId == 0)
        {
            _errorMessage = "Debe seleccionar un cliente de la lista.";
            return;
        }

        foreach (var item in _invoiceDto.Items)
        {
            if (!item.TicketId.HasValue || item.TicketId.Value == 0)
            {
                item.TicketId = null;
            }
        }

        _isSaving = true;
        _errorMessage = null;
        StateHasChanged();

        try
        {
            if (_isEditMode)
            {
                var result = await InvoiceApiService.UpdateInvoiceAsync(InvoiceId!.Value, _invoiceDto);
                if (result.Success)
                {
                    ShowNotification("Éxito", "Factura actualizada correctamente.", NotificationSeverity.Success);
                    DialogService.Close(true);
                }
                else
                {
                    _errorMessage = result.ErrorMessage ?? "No se pudo actualizar la factura.";
                }
            }
            else
            {
                var result = await InvoiceApiService.CreateInvoiceAsync(_invoiceDto);
                if (result.Success)
                {
                    ShowNotification("Éxito", "Factura creada correctamente.", NotificationSeverity.Success);
                    DialogService.Close(true);
                }
                else
                {
                    _errorMessage = result.ErrorMessage ?? "No se pudo crear la factura.";
                }
            }
        }
        catch (Exception ex)
        {
            _errorMessage = $"Error al {(_isEditMode ? "actualizar" : "crear")} la factura: {ex.Message}";
        }
        finally
        {
            _isSaving = false;
            StateHasChanged();
        }
    }

