@using fs_front.DTO
@using System.Globalization

@inject IInvoiceApiService InvoiceApiService
@inject IClientApiService ClientApiService
@inject IServiceApiService ServiceApiService
@inject ITicketApiService TicketApiService
@inject IQuoteApiService QuoteApiService
@inject DialogService DialogService
@inject NotificationService NotificationService

@if (_isLoading)
{
    <div class="d-flex justify-content-center p-5">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Cargando...</span>
        </div>
        <span class="ms-3 fs-5">Cargando datos de la factura...</span>
    </div>
}
else
{
    <EditForm Model="_invoiceDto" OnValidSubmit="HandleSubmit">
        <DataAnnotationsValidator />

        @if (!string.IsNullOrEmpty(_errorMessage))
        {
            <div class="alert alert-danger mb-3" role="alert">
                <i class="bi bi-exclamation-triangle-fill me-2"></i>@_errorMessage
            </div>
        }

        @* Contenido del acordeón — crece libremente *@
        <div class="accordion mb-3" id="invoiceAccordion">

            @* ── Sección 1: Información General ── *@
            <div class="accordion-item">
                <h2 class="accordion-header" id="headingGeneral">
                    <button class="accordion-button @(_section1Complete ? "" : "text-danger")"
                            type="button"
                            data-bs-toggle="collapse"
                            data-bs-target="#collapseGeneral"
                            aria-expanded="true"
                            aria-controls="collapseGeneral">
                        <i class="bi bi-receipt me-2"></i>
                        <strong>Información General</strong>
                        @if (!_section1Complete)
                        {
                            <span class="badge bg-danger ms-2">Incompleto</span>
                        }
                        else
                        {
                            <i class="bi bi-check-circle-fill text-success ms-2"></i>
                        }
                    </button>
                </h2>
                <div id="collapseGeneral"
                     class="accordion-collapse collapse show"
                     aria-labelledby="headingGeneral"
                     data-bs-parent="#invoiceAccordion">
                    <div class="accordion-body">
                        <div class="row g-3">

                            <div class="col-md-6">
                                <label for="ClientSearch" class="form-label small fw-bold">
                                    Cliente <span class="text-danger">*</span>
                                </label>
                                @if (_isLoadingClients)
                                {
                                    <div class="d-flex align-items-center">
                                        <span class="spinner-border spinner-border-sm me-2"></span>
                                        <span>Cargando clientes...</span>
                                    </div>
                                }
                                else
                                {
                                    <div class="position-relative">
                                        <input type="text"
                                               class="form-control form-control-sm"
                                               id="ClientSearch"
                                               placeholder="Buscar cliente por nombre..."
                                               value="@_clientSearchText"
                                               @oninput="OnClientSearchInput"
                                               @onkeydown="OnKeyDown"
                                               @onfocus="OnClientFocus"
                                               @onblur="OnClientBlur"
                                               autocomplete="off" />

                                        @if (_showSuggestions && _filteredClients.Any())
                                        {
                                            <div class="autocomplete-dropdown">
                                                @foreach (var client in _filteredClients.Take(10))
                                                {
                                                    <div class="autocomplete-item"
                                                         @onmousedown="@(() => SelectClient(client))"
                                                         @onmousedown:preventDefault>
                                                        @client.CompanyName
                                                    </div>
                                                }
                                            </div>
                                        }
                                    </div>

                                    @if (_invoiceDto.ClientId > 0 && _selectedClient != null)
                                    {
                                        <small class="text-success mt-1 d-block">
                                            <i class="bi bi-check-circle-fill me-1"></i>
                                            Cliente seleccionado: <strong>@_selectedClient.CompanyName</strong>
                                        </small>
                                    }
                                    @if (_invoiceDto.ClientId == 0 && !string.IsNullOrEmpty(_clientSearchText))
                                    {
                                        <small class="text-danger mt-1 d-block">
                                            <i class="bi bi-exclamation-triangle me-1"></i>
                                            Debe seleccionar un cliente de la lista
                                        </small>
                                    }
                                }
                            </div>

                            <div class="col-md-6">
                                <label for="InvoiceType" class="form-label small fw-bold">
                                    Tipo de Factura <span class="text-danger">*</span>
                                </label>
                                <select id="InvoiceType" class="form-select form-select-sm"
                                        @bind="_invoiceDto.InvoiceType"
                                        @bind:after="ValidateSections">
                                    <option value="Event">Por Evento</option>
                                    <option value="Monthly">Mensual</option>
                                </select>
                            </div>

                            <div class="col-md-4">
                                <label for="InvoiceDate" class="form-label small fw-bold">
                                    Fecha de Factura <span class="text-danger">*</span>
                                </label>
                                <InputDate id="InvoiceDate" class="form-control form-control-sm"
                                           @bind-Value="_invoiceDto.InvoiceDate"
                                           @bind-Value:after="ValidateSections" />
                            </div>

                            <div class="col-md-4">
                                <label for="DueDate" class="form-label small fw-bold">
                                    Fecha de Vencimiento <span class="text-danger">*</span>
                                </label>
                                <InputDate id="DueDate" class="form-control form-control-sm"
                                           @bind-Value="_invoiceDto.DueDate"
                                           @bind-Value:after="ValidateSections" />
                            </div>

                            <div class="col-md-4">
                                <label for="Status" class="form-label small fw-bold">
                                    Estado <span class="text-danger">*</span>
                                </label>
                                <select id="Status" class="form-select form-select-sm"
                                        @bind="_invoiceDto.Status"
                                        disabled="@(!_isEditMode)"
                                        @bind:after="ValidateSections">
                                    <option value="Borrador">Borrador</option>
                                    <option value="Pendiente">Pendiente</option>
                                    <option value="Pagada">Pagada</option>
                                    <option value="Vencida">Vencida</option>
                                    <option value="Cancelada">Cancelada</option>
                                </select>
                                @if (!_isEditMode)
                                {
                                    <small class="text-muted d-block mt-1">
                                        Al crear, la factura inicia como <strong>Borrador</strong>
                                    </small>
                                }
                            </div>

                            <div class="col-12">
                                <label for="PaymentMethod" class="form-label small fw-bold">Método de Pago</label>
                                <select id="PaymentMethod" class="form-select form-select-sm"
                                        @bind="_invoiceDto.PaymentMethod">
                                    <option value="">-- Selecciona un método --</option>
                                    @foreach (var pm in _paymentMethods)
                                    {
                                        <option value="@pm">@pm</option>
                                    }
                                </select>
                                <small class="text-muted">Si no aplica todavía, puedes dejarlo vacío</small>
                            </div>

                        </div>
                    </div>
                </div>
            </div>

            @* ── Sección 2: Artículos ── *@
            <div class="accordion-item">
                <h2 class="accordion-header" id="headingItems">
                    <button class="accordion-button collapsed @(_section2Complete ? "" : "text-danger")"
                            type="button"
                            data-bs-toggle="collapse"
                            data-bs-target="#collapseItems"
                            aria-expanded="false"
                            aria-controls="collapseItems">
                        <i class="bi bi-list-ul me-2"></i>
                        <strong>Artículos de la Factura</strong>
                        @if (!_section2Complete)
                        {
                            <span class="badge bg-danger ms-2">Incompleto</span>
                        }
                        else
                        {
                            <i class="bi bi-check-circle-fill text-success ms-2"></i>
                        }
                    </button>
                </h2>
                <div id="collapseItems"
                     class="accordion-collapse collapse"
                     aria-labelledby="headingItems"
                     data-bs-parent="#invoiceAccordion">
                    <div class="accordion-body">

                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <span class="small text-muted">@_invoiceDto.Items.Count artículo(s) agregado(s)</span>
                            <button type="button" class="btn btn-sm btn-primary" @onclick="AddItem">
                                <i class="bi bi-plus-lg me-1"></i> Agregar Artículo
                            </button>
                        </div>

                        @if (!_invoiceDto.Items.Any())
                        {
                            <div class="text-center text-muted py-4 border rounded bg-light">
                                <i class="bi bi-inbox fs-3 d-block mb-2"></i>
                                No hay artículos. Agregue al menos uno.
                            </div>
                        }
                        else
                        {
                            @foreach (var (item, index) in _invoiceDto.Items.Select((item, i) => (item, i)))
                            {
                                <div class="card mb-2 shadow-sm">
                                    <div class="card-body p-3">
                                        <div class="d-flex justify-content-between align-items-center mb-2">
                                            <h6 class="mb-0 text-primary small fw-bold">
                                                <i class="bi bi-card-list me-1"></i>Artículo #@(index + 1)
                                            </h6>
                                            <button type="button"
                                                    class="btn btn-sm btn-outline-danger py-0 px-2"
                                                    @onclick="() => RemoveItem(index)">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </div>

                                        <div class="row g-2">
                                            <div class="col-12">
                                                <label class="form-label small mb-1 fw-bold">Descripción <span class="text-danger">*</span></label>
                                                <InputText class="form-control form-control-sm"
                                                           @bind-Value="item.Description"
                                                           placeholder="Descripción del servicio o producto"
                                                           @bind-Value:after="ValidateSections" />
                                            </div>

                                            <div class="col-md-4">
                                                <label class="form-label small mb-1 fw-bold">Cantidad <span class="text-danger">*</span></label>
                                                <InputNumber class="form-control form-control-sm"
                                                             @bind-Value="item.Quantity"
                                                             @bind-Value:after="RecalculateTotals" />
                                            </div>

                                            <div class="col-md-4">
                                                <label class="form-label small mb-1 fw-bold">Precio Unitario <span class="text-danger">*</span></label>
                                                <InputNumber class="form-control form-control-sm"
                                                             @bind-Value="item.UnitPrice"
                                                             @bind-Value:after="RecalculateTotals" />
                                            </div>

                                            <div class="col-md-4">
                                                <label class="form-label small mb-1 fw-bold">Subtotal</label>
                                                <input type="text" class="form-control form-control-sm bg-white"
                                                       value="@FormatCurrency(item.Quantity * item.UnitPrice)" readonly />
                                            </div>

                                            <div class="col-12">
                                                <label class="form-label small mb-1 fw-bold">
                                                    Ticket Asociado <span class="text-muted fw-normal">(Opcional)</span>
                                                </label>

                                                @if (_isLoadingTickets)
                                                {
                                                    <div class="d-flex align-items-center">
                                                        <span class="spinner-border spinner-border-sm me-2"></span>
                                                        <span class="small">Cargando tickets...</span>
                                                    </div>
                                                }
                                                else if (_availableTickets == null || !_availableTickets.Any())
                                                {
                                                    <input type="text" class="form-control form-control-sm"
                                                           value="-- No hay tickets disponibles --" disabled />
                                                    <small class="text-muted">Solo se pueden asociar tickets cerrados sin cotización</small>
                                                }
                                                else
                                                {
                                                    <div class="position-relative">
                                                        <input type="text"
                                                               class="form-control form-control-sm"
                                                               placeholder="Buscar ticket por #ID, título o cliente..."
                                                               value="@GetTicketSearchText(item)"
                                                               @oninput="@(e => OnTicketSearchInput(e, item, index))"
                                                               @onfocus="@(() => OnTicketFocus(index))"
                                                               @onblur="@(() => OnTicketBlur(index))"
                                                               @onkeydown="OnKeyDown"
                                                               autocomplete="off" />

                                                        @if (IsTicketSuggestionsVisible(index) && GetFilteredTickets(item, index).Any())
                                                        {
                                                            <div class="autocomplete-dropdown">
                                                                @foreach (var ticket in GetFilteredTickets(item, index).Take(8))
                                                                {
                                                                    <div class="autocomplete-item"
                                                                         @onmousedown="@(() => SelectTicket(item, ticket, index))"
                                                                         @onmousedown:preventDefault>
                                                                        <strong class="text-primary">#@ticket.Id</strong> — @ticket.Title
                                                                        <br />
                                                                        <small class="text-muted">
                                                                            <i class="bi bi-building me-1"></i>@ticket.ClientName
                                                                            <i class="bi bi-clock ms-2 me-1"></i>@ticket.ActualHours.ToString("0.0")h
                                                                        </small>
                                                                    </div>
                                                                }
                                                            </div>
                                                        }
                                                    </div>

                                                    @if (item.TicketId.HasValue && item.TicketId.Value > 0)
                                                    {
                                                        var selectedTicket = _availableTickets.FirstOrDefault(t => t.Id == item.TicketId.Value);
                                                        if (selectedTicket != null)
                                                        {
                                                            <div class="alert alert-success p-2 mt-2 mb-0">
                                                                <div class="d-flex justify-content-between align-items-start">
                                                                    <small>
                                                                        <i class="bi bi-check-circle-fill me-1"></i>
                                                                        <strong>#@selectedTicket.Id — @selectedTicket.Title</strong><br />
                                                                        Cliente: @selectedTicket.ClientName |
                                                                        Horas: @selectedTicket.ActualHours.ToString("0.0")h |
                                                                        Costo: @FormatCurrency(selectedTicket.ActualHours * selectedTicket.HourlyRate)
                                                                    </small>
                                                                    <button type="button"
                                                                            class="btn btn-sm btn-link text-danger p-0 ms-2"
                                                                            @onclick="() => ClearTicket(item, index)">
                                                                        <i class="bi bi-x-lg"></i>
                                                                    </button>
                                                                </div>
                                                            </div>
                                                        }
                                                    }
                                                }
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }

                            <div class="card border-primary mt-3">
                                <div class="card-body p-3">
                                    <div class="row justify-content-end">
                                        <div class="col-md-5 col-lg-4">
                                            <div class="d-flex justify-content-between mb-1">
                                                <span class="small">Subtotal:</span>
                                                <strong class="small">@FormatCurrency(_calculatedSubtotal)</strong>
                                            </div>
                                            <div class="d-flex justify-content-between mb-1">
                                                <span class="small">IVA (16%):</span>
                                                <strong class="small">@FormatCurrency(_calculatedTax)</strong>
                                            </div>
                                            <hr class="my-1" />
                                            <div class="d-flex justify-content-between">
                                                <span class="fw-bold">Total:</span>
                                                <strong class="text-success h6 mb-0">@FormatCurrency(_calculatedTotal)</strong>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }

                    </div>
                </div>
            </div>

            @* ── Sección 3: Notas (Opcional) ── *@
            <div class="accordion-item">
                <h2 class="accordion-header" id="headingNotes">
                    <button class="accordion-button collapsed"
                            type="button"
                            data-bs-toggle="collapse"
                            data-bs-target="#collapseNotes"
                            aria-expanded="false"
                            aria-controls="collapseNotes">
                        <i class="bi bi-sticky me-2"></i>
                        <strong>Notas Adicionales</strong>
                        <span class="badge bg-secondary ms-2">Opcional</span>
                    </button>
                </h2>
                <div id="collapseNotes"
                     class="accordion-collapse collapse"
                     aria-labelledby="headingNotes"
                     data-bs-parent="#invoiceAccordion">
                    <div class="accordion-body">
                        <label for="Notes" class="form-label small fw-bold">Notas</label>
                        <InputTextArea id="Notes" class="form-control form-control-sm" rows="3"
                                       placeholder="Términos de pago, condiciones adicionales..."
                                       @bind-Value="_invoiceDto.Notes" />
                    </div>
                </div>
            </div>

        </div>

        @* ── Footer — sticky al fondo del modal, no de la página ── *@
        <div class="form-footer-sticky">
            <div>
                @if (!_allSectionsComplete)
                {
                    <small class="text-danger">
                        <i class="bi bi-exclamation-circle me-1"></i>
                        Complete las secciones obligatorias
                    </small>
                }
            </div>
            <div class="d-flex gap-2">
                <button type="button" class="btn btn-secondary btn-sm" @onclick="Cancel">
                    Cancelar
                </button>
                <button type="submit" class="btn btn-primary btn-sm"
                        disabled="@(_isSaving || !_allSectionsComplete)">
                    @if (_isSaving)
                    {
                        <span class="spinner-border spinner-border-sm me-2"></span>
                    }
                    <i class="bi bi-check-lg me-1"></i>
                    @(_isEditMode ? "Actualizar Factura" : "Guardar")
                </button>
            </div>
        </div>

    </EditForm>
}

