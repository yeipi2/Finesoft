@using fs_front.DTO
@using fs_front.Repositories
@using Radzen

@inject IInvoiceApiService InvoiceApiService
@inject IQuoteApiService QuoteApiService
@inject DialogService DialogService
@inject NotificationService NotificationService

<div class="invoice-form-wrapper">
    <EditForm Model="_dto" OnValidSubmit="HandleSubmit">
        <DataAnnotationsValidator />

        @* ── Cuerpo scrolleable ── *@
        <div class="invoice-form-body">

            @if (!string.IsNullOrEmpty(_errorMessage))
            {
                <div class="alert alert-danger mb-3" role="alert">
                    <i class="bi bi-exclamation-triangle-fill me-2"></i>@_errorMessage
                </div>
            }

            <div class="accordion mb-3" id="invoiceFromQuoteAccordion">

                <InvoiceFromQuoteSection Dto="@_dto"
                                         Quotes="@_quotes"
                                         SelectedQuote="@_selectedQuote"
                                         IsLoading="@_isLoadingQuotes"
                                         QuotePreSelected="@_quotePreSelected"
                                         IsComplete="@_section1Complete"
                                         OnQuoteSelected="HandleQuoteSelected" />

                <InvoiceFromQuoteDateSection Dto="@_dto"
                                             IsComplete="@_section2Complete"
                                             OnChanged="ValidateSections" />

                <InvoiceNotesSection Notes="@_dto.Notes"
                                     IsActive="false"
                                     NotesChanged="@(v => _dto.Notes = v)"
                                     OnToggle="@(_ => { })" />

            </div>
        </div>

        @* ── Footer siempre visible ── *@
        <div class="invoice-form-footer">
            <div>
                @if (!_allSectionsComplete)
                {
                    <small class="text-danger">
                        <i class="bi bi-exclamation-circle me-1"></i>
                        Complete las secciones obligatorias
                    </small>
                }
            </div>
            <div class="d-flex gap-2">
                <button type="button" class="btn btn-secondary btn-sm" @onclick="Cancel">
                    Cancelar
                </button>
                <button type="submit" class="btn btn-primary btn-sm"
                        disabled="@(_isSaving || !_allSectionsComplete)">
                    @if (_isSaving)
                    {
                        <span class="spinner-border spinner-border-sm me-2"></span>
                    }
                    <i class="bi bi-receipt me-1"></i> Guardar Factura
                </button>
            </div>
        </div>

    </EditForm>
</div>

<style>
    .invoice-form-wrapper {
        display: flex;
        flex-direction: column;
        max-height: 82vh;
        overflow: hidden;
    }

    .invoice-form-body {
        flex: 1;
        overflow-y: auto;
        padding-right: 4px;
    }

    .invoice-form-footer {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding-top: 0.75rem;
        margin-top: 0.25rem;
        border-top: 1px solid #dee2e6;
        background-color: white;
        flex-shrink: 0;
    }
</style>

@code {
    [Parameter] public int? QuoteId { get; set; }

    // ── State ──
    private CreateInvoiceFromQuoteDto _dto = new();
    private List<QuoteDetailDto>? _quotes;
    private QuoteDetailDto? _selectedQuote;
    private bool _quotePreSelected = false;
    private bool _isLoadingQuotes = false;
    private bool _isSaving = false;
    private string? _errorMessage;

    // ── Validation ──
    private bool _section1Complete => _dto.QuoteId > 0;
    private bool _isPUE => string.Equals(_dto.PaymentType, "PUE", StringComparison.OrdinalIgnoreCase);
    private bool _section2Complete =>
        _dto.InvoiceDate != default &&
        !string.IsNullOrWhiteSpace(_dto.PaymentType) &&
        (!_isPUE || !string.IsNullOrWhiteSpace(_dto.PaymentMethod));
    private bool _allSectionsComplete => _section1Complete && _section2Complete;

    protected override async Task OnInitializedAsync()
    {
        _dto = new CreateInvoiceFromQuoteDto
        {
            InvoiceDate = DateTime.Now,
            DueDate = DateTime.Now.AddDays(30),
            PaymentType = "PPD",
            PaymentMethod = string.Empty
        };

        await LoadQuotes();

        if (QuoteId.HasValue && QuoteId.Value > 0)
        {
            _dto.QuoteId = QuoteId.Value;
            _quotePreSelected = true;
            await FetchSelectedQuote();
        }
    }

    private async Task LoadQuotes()
    {
        _isLoadingQuotes = true;
        StateHasChanged();
        try
        {
            var all = await QuoteApiService.GetQuotesAsync();
            _quotes = all?
                .Where(q => q.Status == "Aceptada" &&
                            !(q.InvoiceId.HasValue && q.InvoiceId.Value > 0))
                .OrderByDescending(q => q.CreatedAt)
                .ToList();
        }
        catch (Exception ex)
        {
            _errorMessage = $"Error al cargar cotizaciones: {ex.Message}";
        }
        finally
        {
            _isLoadingQuotes = false;
            StateHasChanged();
        }
    }

    private async Task HandleQuoteSelected()
    {
        await FetchSelectedQuote();
        ValidateSections();
    }

    private async Task FetchSelectedQuote()
    {
        if (_dto.QuoteId <= 0) { _selectedQuote = null; return; }
        try
        {
            _selectedQuote = await QuoteApiService.GetQuoteByIdAsync(_dto.QuoteId);
        }
        catch (Exception ex)
        {
            _errorMessage = $"Error al cargar cotización: {ex.Message}";
        }
        StateHasChanged();
    }

    private void ValidateSections() => StateHasChanged();

    private async Task HandleSubmit()
    {
        _isSaving = true;
        _errorMessage = null;
        StateHasChanged();

        try
        {
            var result = await InvoiceApiService.CreateInvoiceFromQuoteAsync(_dto);
            if (result.Success)
            {
                NotificationService.Notify(new NotificationMessage
                {
                    Severity = NotificationSeverity.Success,
                    Summary = "Éxito",
                    Detail = "Factura creada desde cotización.",
                    Duration = 4000
                });
                DialogService.Close(true);
            }
            else
            {
                _errorMessage = result.ErrorMessage ?? "No se pudo crear la factura.";
            }
        }
        catch (Exception ex)
        {
            _errorMessage = $"Error: {ex.Message}";
        }
        finally
        {
            _isSaving = false;
            StateHasChanged();
        }
    }

    private void Cancel() => DialogService.Close(false);
}
