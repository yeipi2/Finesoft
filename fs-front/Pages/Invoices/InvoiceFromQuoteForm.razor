@using fs_front.DTO

<section class="container-fluid px-3 py-2" style="max-height: 85vh; overflow-y: auto;">
    <EditForm Model="_createInvoiceDto" OnValidSubmit="HandleSubmit">
        <DataAnnotationsValidator />

        <div class="mb-3">
            <label for="QuoteId" class="form-label fw-bold small">Seleccionar Cotización *</label>
            @if (_isLoadingQuotes)
            {
                <div class="d-flex align-items-center">
                    <span class="spinner-border spinner-border-sm me-2"></span>
                    <span>Cargando cotizaciones disponibles...</span>
                </div>
            }
            else if (_quotes == null || !_quotes.Any())
            {
                <div class="alert alert-warning py-2" role="alert">
                    <i class="bi bi-exclamation-triangle"></i>
                    No hay cotizaciones aceptadas disponibles para convertir en factura.
                </div>
            }
            else
            {
                <select id="QuoteId" class="form-select" @bind="_createInvoiceDto.QuoteId" @bind:after="OnQuoteSelected" disabled="@_quotePreSelected">
                    <option value="0">-- Seleccione una cotización --</option>
                    @foreach (var quote in _quotes)
                    {
                        <option value="@quote.Id">
                            @quote.QuoteNumber - @quote.ClientName - @FormatCurrency(quote.Total)
                        </option>
                    }
                </select>
                <ValidationMessage For="@(() => _createInvoiceDto.QuoteId)" />
            }
        </div>

        @if (_selectedQuote != null)
        {
            <div class="card mb-3" style="max-height: 250px; overflow-y: auto;">
                <div class="card-header bg-info text-white py-2">
                    <h6 class="mb-0 small"><i class="bi bi-info-circle"></i> Detalles de la Cotización</h6>
                </div>
                <div class="card-body p-2">
                    <div class="row g-2">
                        <div class="col-md-6">
                            <small><strong>Cliente:</strong> @_selectedQuote.ClientName</small>
                        </div>
                        <div class="col-md-6">
                            <small><strong>Estado:</strong> <span class="badge bg-success">@_selectedQuote.Status</span></small>
                        </div>
                        <div class="col-md-6">
                            <small><strong>Número:</strong> @_selectedQuote.QuoteNumber</small>
                        </div>
                        <div class="col-md-6">
                            <small><strong>Fecha:</strong> @_selectedQuote.CreatedAt.ToString("dd/MM/yyyy")</small>
                        </div>
                    </div>

                    @if (_selectedQuote.Items.Any())
                    {
                        <hr class="my-2" />
                        <h6 class="mb-2 small">Artículos (@_selectedQuote.Items.Count):</h6>
                        <div class="table-responsive">
                            <table class="table table-sm table-hover mb-0" style="font-size: 0.85rem;">
                                <thead class="table-light">
                                    <tr>
                                        <th>Descripción</th>
                                        <th class="text-center" style="width: 80px;">Cant.</th>
                                        <th class="text-end" style="width: 100px;">P. Unit.</th>
                                        <th class="text-end" style="width: 100px;">Subtotal</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in _selectedQuote.Items)
                                    {
                                        <tr>
                                            <td>@item.Description</td>
                                            <td class="text-center">@item.Quantity</td>
                                            <td class="text-end">@FormatCurrency(item.UnitPrice)</td>
                                            <td class="text-end">@FormatCurrency(item.Subtotal)</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }

                    <hr class="my-2" />
                    <div class="row g-1">
                        <div class="col-md-4">
                            <small><strong>Subtotal:</strong> @FormatCurrency(_selectedQuote.Subtotal)</small>
                        </div>
                        <div class="col-md-4">
                            <small><strong>IVA:</strong> @FormatCurrency(_selectedQuote.Tax)</small>
                        </div>
                        <div class="col-md-4">
                            <small><strong class="text-success">Total: @FormatCurrency(_selectedQuote.Total)</strong></small>
                        </div>
                    </div>
                </div>
            </div>
        }

        <div class="row mb-3">
            <div class="col-md-6">
                <label for="InvoiceDate" class="form-label fw-bold small">Fecha de Factura *</label>
                <InputDate id="InvoiceDate" class="form-control form-control-sm" @bind-Value="_createInvoiceDto.InvoiceDate" />
            </div>

            <div class="col-md-6">
                <label for="DueDate" class="form-label fw-bold small">Fecha de Vencimiento</label>
                <InputDate id="DueDate" class="form-control form-control-sm" @bind-Value="_createInvoiceDto.DueDate" />
            </div>
        </div>

        <div class="mb-3">
            <label for="PaymentMethod" class="form-label fw-bold small">Método de Pago</label>
            <InputText id="PaymentMethod" class="form-control form-control-sm"
                       placeholder="Transferencia, Efectivo, Tarjeta..."
                       @bind-Value="_createInvoiceDto.PaymentMethod" />
        </div>

        <div class="mb-3">
            <label for="Notes" class="form-label fw-bold small">Notas Adicionales</label>
            <InputTextArea id="Notes" class="form-control form-control-sm" rows="2"
                           placeholder="Términos de pago, condiciones adicionales..."
                           @bind-Value="_createInvoiceDto.Notes" />
        </div>

        <div class="d-flex justify-content-end gap-2">
            <button type="button" class="btn btn-sm btn-secondary" @onclick="Cancel">
                <i class="bi bi-x-lg me-1"></i>
                Cancelar
            </button>
            <button type="submit" class="btn btn-sm btn-primary"
                    disabled="@(_isSaving || _createInvoiceDto.QuoteId == 0)">
                @if (_isSaving)
                {
                    <span class="spinner-border spinner-border-sm me-2"></span>
                }
                <i class="bi bi-receipt me-1"></i>
                Crear Factura
            </button>
        </div>

        @if (!string.IsNullOrEmpty(_errorMessage))
        {
            <div class="alert alert-danger mt-2 py-2 small">
                <i class="bi bi-exclamation-triangle-fill me-2"></i>
                @_errorMessage
            </div>
        }
    </EditForm>
</section>

@inject IInvoiceApiService InvoiceApiService
@inject IQuoteApiService QuoteApiService
@inject DialogService DialogService
@inject NotificationService NotificationService

