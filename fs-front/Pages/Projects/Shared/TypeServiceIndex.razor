@page "/proyectos/tipos-servicios"
@using fs_front.DTO

<div class="container p-4">
    <section class="container-fluid p-xl-5">
        <div class="d-flex justify-content-between align-items-start mb-4">
            <div class="d-flex align-items-center">
                <i class="bi bi-tags fs-1 text-primary me-3"></i>
                <div>
                    <p class="display-6 fw-bolder mb-2">Tipos de Servicio</p>
                    <p class="text-muted mb-0">Gestión de categorías de servicios</p>
                </div>
            </div>
            <div class="d-flex justify-content-between align-items-start mb-4">
                <button @onclick="ShowCreateModal" class="btn btn-primary d-flex align-items-center gap-2 fw-bold small">
                    <i class="bi bi-plus-lg"></i>
                    Nuevo Tipo
                </button>
            </div>
            
            <div class="row mb-4">
                <div class="col-12 d-flex justify-content-md-end">
                    <div class="btn-group" role="group">
                        <NavLink href="proyectos" class="btn btn-outline-primary" Match="NavLinkMatch.All">
                            <i class="bi bi-folder-fill me-1"></i> Proyectos
                        </NavLink>
                        <NavLink href="/proyectos/tipos-actividades" class="btn btn-outline-primary">
                            <i class="bi bi-list-task me-1"></i> Tipos de Actividades
                        </NavLink>
                        <NavLink href="/proyectos/tipos-servicios" class="btn btn-outline-primary" Match="NavLinkMatch.All">
                            <i class="bi bi-gear-fill me-1"></i> Tipos de Servicios
                        </NavLink>
                    </div>
                </div>
            </div>
            
        </div>
    </section>

    <section class="container-fluid p-xl-5">
        @if (_isLoading)
        {
            <div class="text-center py-5">
                <div class="spinner-border text-primary" role="status">
                    <span class="visually-hidden">Cargando...</span>
                </div>
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-light">
                    <tr>
                        <th scope="col">Nombre</th>
                        <th scope="col">Descripción</th>
                        <th scope="col">Estado</th>
                        <th scope="col" class="text-center">Acciones</th>
                    </tr>
                    </thead>
                    <tbody>
                    @if (_typeServices != null && _typeServices.Any())
                    {
                        @foreach (var type in _typeServices)
                        {
                            <tr>
                                <td class="fw-bold">@type.Name</td>
                                <td class="text-muted">@type.Description</td>
                                <td>
                                    @if (type.IsActive)
                                    {
                                        <span class="badge bg-success">Activo</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Inactivo</span>
                                    }
                                </td>
                                <td class="text-center">
                                    <button class="btn btn-sm btn-outline-primary me-1" 
                                            @onclick="() => ShowEditModal(type.Id)" 
                                            title="Editar">
                                        <i class="bi bi-pencil-fill"></i>
                                    </button>
                                    <button class="btn btn-sm btn-outline-danger" 
                                            @onclick="() => ConfirmDelete(type)" 
                                            title="Eliminar">
                                        <i class="bi bi-trash-fill"></i>
                                    </button>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="4" class="text-center py-4">
                                <i class="bi bi-inbox fs-1 text-muted"></i>
                                <p class="text-muted mt-2">No hay tipos de servicio registrados.</p>
                            </td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        }
    </section>
</div>

@inject ITypeServiceApiService TypeServiceApiService
@inject DialogService DialogService
@inject NotificationService NotificationService

@code {
    private List<TypeServiceDto>? _typeServices;
    private bool _isLoading = false;

    protected override async Task OnInitializedAsync()
    {
        await LoadTypeServices();
    }

    private async Task LoadTypeServices()
    {
        _isLoading = true;
        try
        {
            _typeServices = await TypeServiceApiService.GetTypeServicesAsync();
        }
        catch (Exception ex)
        {
            ShowNotification("Error", $"Error al cargar tipos: {ex.Message}", NotificationSeverity.Error);
        }
        finally
        {
            _isLoading = false;
        }
    }

    private async Task ShowCreateModal()
    {
        var result = await DialogService.OpenAsync<TypeServiceForm>("Crear Tipo de Servicio",
            options: new DialogOptions()
            {
                Width = "500px",
                Resizable = false,
                Draggable = false
            });

        if (result == true)
        {
            await LoadTypeServices();
        }
    }

    private async Task ShowEditModal(int typeId)
    {
        var parameters = new Dictionary<string, object>
        {
            { "TypeServiceId", typeId }
        };

        var result = await DialogService.OpenAsync<TypeServiceForm>("Editar Tipo de Servicio",
            parameters,
            new DialogOptions()
            {
                Width = "500px",
                Resizable = false,
                Draggable = false
            });

        if (result == true)
        {
            await LoadTypeServices();
        }
    }

    private async Task ConfirmDelete(TypeServiceDto type)
    {
        var confirmed = await DialogService.Confirm(
            $"¿Está seguro que desea eliminar el tipo '{type.Name}'?",
            "Confirmar Eliminación",
            new ConfirmOptions()
            {
                OkButtonText = "Sí, eliminar",
                CancelButtonText = "Cancelar"
            });

        if (confirmed == true)
        {
            await DeleteTypeService(type.Id);
        }
    }

    private async Task DeleteTypeService(int typeId)
    {
        try
        {
            var result = await TypeServiceApiService.DeleteTypeServiceAsync(typeId);
            if (result.Success)
            {
                ShowNotification("Éxito", "Tipo eliminado correctamente.", NotificationSeverity.Success);
                await LoadTypeServices();
            }
            else
            {
                ShowNotification("Error", result.ErrorMessage ?? "No se pudo eliminar el tipo.", NotificationSeverity.Error);
            }
        }
        catch (Exception ex)
        {
            ShowNotification("Error", $"Error al eliminar: {ex.Message}", NotificationSeverity.Error);
        }
    }

    private void ShowNotification(string title, string message, NotificationSeverity severity)
    {
        NotificationService.Notify(new NotificationMessage
        {
            Severity = severity,
            Summary = title,
            Detail = message,
            Duration = 4000
        });
    }
}