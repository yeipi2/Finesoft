@using fs_front.DTO
@using System.Globalization

<section class="container-fluid px-3" style="min-height: 600px;">
    <EditForm Model="_quoteDto" OnValidSubmit="HandleSubmit">
        <DataAnnotationsValidator />

        <div class="row mb-3">
            <div class="col-md-6">
                <label for="ClientSearch" class="form-label fw-bold small">Cliente *</label>
                @if (_isLoadingClients)
                {
                    <div class="d-flex align-items-center">
                        <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                        <span>Cargando clientes...</span>
                    </div>
                }
                else
                {
                    <div class="position-relative">
                        <input type="text"
                               class="form-control"
                               id="ClientSearch"
                               placeholder="Buscar cliente por nombre..."
                               value="@_clientSearchText"
                               @oninput="OnClientSearchInput"
                               @onkeydown="OnKeyDown"
                               @onfocus="OnClientFocus"
                               @onblur="OnClientBlur"
                               autocomplete="off" />

                        @if (_showSuggestions && !string.IsNullOrWhiteSpace(_clientSearchText) && _filteredClients.Any())
                        {
                            <div class="autocomplete-dropdown">
                                @foreach (var client in _filteredClients.Take(10))
                                {
                                    <div class="autocomplete-item"
                                         @onmousedown="@(() => SelectClient(client))"
                                         @onmousedown:preventDefault>
                                        @client.CompanyName
                                    </div>
                                }
                            </div>
                        }
                    </div>

                    @if (_quoteDto.ClientId > 0 && _selectedClient != null)
                    {
                        <small class="text-success mt-1 d-block">
                            ✓ Cliente seleccionado: <strong>@_selectedClient.CompanyName</strong>
                        </small>
                    }

                    @if (_quoteDto.ClientId == 0 && !string.IsNullOrEmpty(_clientSearchText))
                    {
                        <div class="form-text text-danger mt-1">
                            <i class="bi bi-exclamation-triangle"></i> Debe seleccionar un cliente de la lista
                        </div>
                    }
                }
                <ValidationMessage For="@(() => _quoteDto.ClientId)" />
            </div>

            <div class="col-md-3">
                <label for="ValidUntil" class="form-label fw-bold small">Válida Hasta</label>
                <InputDate id="ValidUntil" class="form-control" @bind-Value="_quoteDto.ValidUntil" />
            </div>

            <div class="col-md-3">
                <label for="Status" class="form-label fw-bold small">Estado *</label>
                <select id="Status" class="form-select" @bind="_quoteDto.Status">
                    <option value="Borrador">Borrador</option>
                    <option value="Enviada">Enviada</option>
                    <option value="Aceptada">Aceptada</option>
                    <option value="Rechazada">Rechazada</option>
                </select>
            </div>
        </div>

        <div class="mb-3">
            <div class="d-flex justify-content-between align-items-center mb-2">
                <label class="form-label fw-bold small mb-0">Artículos de la Cotización</label>
                <button type="button" class="btn btn-sm btn-primary" @onclick="AddItem">
                    <i class="bi bi-plus-lg"></i> Agregar Artículo
                </button>
            </div>

            <div class="border rounded p-3 mb-3 bg-light" style="max-height: 280px; overflow-y: auto;">
                @if (!_quoteDto.Items.Any())
                {
                    <div class="text-center text-muted py-3">
                        <i class="bi bi-inbox fs-3"></i>
                        <p class="mb-0 mt-2">No hay artículos. Agregue al menos uno.</p>
                    </div>
                }
                else
                {
                    @foreach (var (item, index) in _quoteDto.Items.Select((item, i) => (item, i)))
                    {
                        <div class="card mb-2 shadow-sm">
                            <div class="card-body p-2">
                                <div class="d-flex justify-content-between align-items-start mb-2">
                                    <h6 class="mb-0 text-primary small">
                                        <i class="bi bi-card-list me-1"></i>
                                        Artículo #@(index + 1)
                                    </h6>
                                    <button type="button" class="btn btn-sm btn-outline-danger py-0 px-2"
                                            @onclick="() => RemoveItem(index)"
                                            title="Eliminar artículo">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </div>

                                <div class="row g-2">
                                    <div class="col-md-12">
                                        <label class="form-label small mb-1">Descripción *</label>
                                        <InputText class="form-control form-control-sm"
                                                   @bind-Value="item.Description"
                                                   placeholder="Descripción del servicio o producto" />
                                    </div>

                                    <div class="col-md-4">
                                        <label class="form-label small mb-1">Cantidad *</label>
                                        <InputNumber class="form-control form-control-sm"
                                                     @bind-Value="item.Quantity"
                                                     @bind-Value:after="RecalculateTotals" />
                                    </div>

                                    <div class="col-md-4">
                                        <label class="form-label small mb-1">Precio Unitario *</label>
                                        <InputNumber class="form-control form-control-sm"
                                                     @bind-Value="item.UnitPrice"
                                                     @bind-Value:after="RecalculateTotals" />
                                    </div>

                                    <div class="col-md-4">
                                        <label class="form-label small mb-1">Subtotal</label>
                                        <input type="text" class="form-control form-control-sm bg-white"
                                               value="@((item.Quantity * item.UnitPrice).ToString("C"))"
                                               readonly />
                                    </div>

                                    @* ⭐ CAMBIO CRÍTICO: Solo mostrar tickets CERRADOS *@
                                    <div class="col-md-12">
                                        <label class="form-label small mb-1">
                                            Ticket Asociado (Opcional)
                                            <i class="bi bi-info-circle text-muted"
                                               title="Solo se muestran tickets cerrados"></i>
                                        </label>

                                        @if (_isLoadingTickets)
                                        {
                                            <div class="d-flex align-items-center">
                                                <span class="spinner-border spinner-border-sm me-2"></span>
                                                <span class="small">Cargando tickets...</span>
                                            </div>
                                        }
                                        else if (_closedTickets == null || !_closedTickets.Any())
                                        {
                                            <select class="form-select form-select-sm" disabled>
                                                <option value="">-- No hay tickets cerrados disponibles --</option>
                                            </select>
                                            <small class="text-muted">
                                                <i class="bi bi-exclamation-circle"></i>
                                                Solo se pueden asociar tickets con estado "Cerrado"
                                            </small>
                                        }
                                        else
                                        {
                                            <select class="form-select form-select-sm"
                                                    @bind="item.TicketId"
                                                    @bind:after="() => OnTicketSelected(item)">
                                                <option value="">-- Sin ticket asociado --</option>
                                                @foreach (var ticket in _closedTickets)
                                                {
                                                    <option value="@ticket.Id">
                                                        #@ticket.Id - @ticket.Title
                                                        (@ticket.ClientName - @ticket.ActualHours.ToString("0.0")h)
                                                    </option>
                                                }
                                            </select>

                                            @* ⭐ NUEVO: Mostrar info del ticket seleccionado *@
                                            @if (item.TicketId.HasValue && item.TicketId.Value > 0)
                                            {
                                                var selectedTicket = _closedTickets.FirstOrDefault(t => t.Id == item.TicketId.Value);
                                                if (selectedTicket != null)
                                                {
                                                    <div class="alert alert-info p-2 mt-2 mb-0">
                                                        <small>
                                                            <i class="bi bi-ticket-perforated"></i>
                                                            <strong>@selectedTicket.Title</strong><br />
                                                            Cliente: @selectedTicket.ClientName |
                                                            Horas: @selectedTicket.ActualHours.ToString("0.0")h |
                                                            Costo: $@((selectedTicket.ActualHours * selectedTicket.HourlyRate).ToString("N2"))
                                                        </small>
                                                    </div>
                                                }
                                            }
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                }
            </div>
        </div>

        <div class="mb-3">
            <label for="Notes" class="form-label fw-bold small">Notas Adicionales</label>
            <InputTextArea id="Notes" class="form-control" rows="2"
                           placeholder="Condiciones, términos adicionales..."
                           @bind-Value="_quoteDto.Notes" />
        </div>

        <div class="card bg-light border-primary mb-3">
            <div class="card-body p-2">
                <div class="row justify-content-end">
                    <div class="col-md-5 col-lg-4">
                        <div class="d-flex justify-content-between mb-1">
                            <span class="small">Subtotal:</span>
                            <strong class="small">@FormatCurrency(_calculatedSubtotal)</strong>
                        </div>
                        <div class="d-flex justify-content-between mb-1">
                            <span class="small">IVA (16%):</span>
                            <strong class="small">@FormatCurrency(_calculatedTax)</strong>
                        </div>
                        <hr class="my-1" />
                        <div class="d-flex justify-content-between">
                            <span class="fw-bold">Total:</span>
                            <strong class="text-success h5 mb-0">@FormatCurrency(_calculatedTotal)</strong>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="d-flex justify-content-end gap-2">
            <button type="button" class="btn btn-secondary" @onclick="Cancel">
                <i class="bi bi-x-lg me-1"></i>
                Cancelar
            </button>
            <button type="submit" class="btn btn-primary"
                    disabled="@(_isSaving || !_quoteDto.Items.Any() || _quoteDto.ClientId == 0)">
                @if (_isSaving)
                {
                    <span class="spinner-border spinner-border-sm me-2"></span>
                }
                <i class="bi bi-check-lg me-1"></i>
                @(_isEditMode ? "Actualizar" : "Crear") Cotización
            </button>
        </div>

        @if (!string.IsNullOrEmpty(_errorMessage))
        {
            <div class="alert alert-danger mt-2 py-2">
                <i class="bi bi-exclamation-triangle-fill me-2"></i>
                @_errorMessage
            </div>
        }
    </EditForm>
</section>

<style>
    .autocomplete-dropdown {
        position: absolute;
        top: 100%;
        left: 0;
        right: 0;
        z-index: 1000;
        max-height: 250px;
        overflow-y: auto;
        background-color: white;
        border: 1px solid #ced4da;
        border-top: none;
        border-radius: 0 0 0.375rem 0.375rem;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.15);
        margin-top: 2px;
    }

    .autocomplete-item {
        padding: 0.625rem 0.75rem;
        cursor: pointer;
        border-bottom: 1px solid #f0f0f0;
        transition: background-color 0.15s ease;
    }

        .autocomplete-item:hover {
            background-color: #e7f3ff;
        }

        .autocomplete-item:last-child {
            border-bottom: none;
        }

    .bg-light::-webkit-scrollbar {
        width: 8px;
    }

    .bg-light::-webkit-scrollbar-track {
        background: #f1f1f1;
        border-radius: 4px;
    }

    .bg-light::-webkit-scrollbar-thumb {
        background: #888;
        border-radius: 4px;
    }

        .bg-light::-webkit-scrollbar-thumb:hover {
            background: #555;
        }
</style>

@inject IQuoteApiService QuoteApiService
@inject IClientApiService ClientApiService
@inject IServiceApiService ServiceApiService
@inject ITicketApiService TicketApiService
@inject DialogService DialogService
@inject NotificationService NotificationService

@code {
    [Parameter] public int? QuoteId { get; set; }

    private QuoteDto _quoteDto = new();
    private List<ClientDto> _allClients = new();
    private List<ClientDto> _filteredClients = new();
    private ClientDto? _selectedClient;
    private string _clientSearchText = string.Empty;
    private bool _showSuggestions = false;

    private List<ServiceDetailDto>? _services;
    private List<TicketDetailDto>? _tickets;

    // ⭐ NUEVO: Lista filtrada de solo tickets cerrados
    private List<TicketDetailDto>? _closedTickets;
    private bool _isLoadingTickets = false;

    private decimal _calculatedSubtotal = 0;
    private decimal _calculatedTax = 0;
    private decimal _calculatedTotal = 0;

    private bool _isSaving = false;
    private bool _isLoadingClients = false;
    private string? _errorMessage;
    private bool _isEditMode => QuoteId.HasValue;

    private readonly CultureInfo _mexicanCulture = new CultureInfo("es-MX");

    protected override async Task OnInitializedAsync()
    {
        await LoadInitialData();

        if (_isEditMode)
        {
            await LoadQuote();
        }
        else
        {
            _quoteDto = new QuoteDto
            {
                Status = "Borrador",
                ValidUntil = DateTime.Now.AddDays(30)
            };
        }

        RecalculateTotals();
    }

    private string FormatCurrency(decimal amount)
    {
        return string.Format("$ {0:N2}", amount);
    }

    private async Task LoadInitialData()
    {
        _isLoadingClients = true;
        _isLoadingTickets = true;
        StateHasChanged();

        try
        {
            var clientsTask = ClientApiService.GetClientsAsync();
            var servicesTask = ServiceApiService.GetServicesAsync();
            var ticketsTask = TicketApiService.GetTicketsAsync();

            await Task.WhenAll(clientsTask, servicesTask, ticketsTask);

            _allClients = (await clientsTask) ?? new List<ClientDto>();
            _filteredClients = new List<ClientDto>();
            _services = await servicesTask;
            _tickets = await ticketsTask;

            // ⭐ CRÍTICO: Filtrar solo tickets CERRADOS
            _closedTickets = _tickets?
                .Where(t => t.Status?.Equals("Cerrado", StringComparison.OrdinalIgnoreCase) == true)
                .OrderByDescending(t => t.ClosedAt ?? t.UpdatedAt ?? t.CreatedAt)
                .ToList() ?? new List<TicketDetailDto>();

            Console.WriteLine($"✅ Tickets cerrados cargados: {_closedTickets.Count} de {_tickets?.Count ?? 0} totales");
        }
        catch (Exception ex)
        {
            Console.WriteLine($"❌ Error al cargar datos: {ex.Message}");
            _allClients = new List<ClientDto>();
            _filteredClients = new List<ClientDto>();
            _closedTickets = new List<TicketDetailDto>();
            _errorMessage = "Error al cargar datos iniciales.";
        }
        finally
        {
            _isLoadingClients = false;
            _isLoadingTickets = false;
            StateHasChanged();
        }
    }

    private async Task LoadQuote()
    {
        try
        {
            var quote = await QuoteApiService.GetQuoteByIdAsync(QuoteId!.Value);
            if (quote != null)
            {
                _quoteDto = new QuoteDto
                {
                    Id = quote.Id,
                    ClientId = quote.ClientId,
                    ValidUntil = quote.ValidUntil,
                    Status = quote.Status,
                    Notes = quote.Notes,
                    Items = quote.Items.Select(i => new QuoteItemDto
                    {
                        Id = i.Id,
                        Description = i.Description,
                        Quantity = i.Quantity,
                        UnitPrice = i.UnitPrice,
                        ServiceId = i.ServiceId,
                        TicketId = i.TicketId  // ⭐ Asegurar que se carga el TicketId
                    }).ToList()
                };

                if (quote.ClientId > 0)
                {
                    _selectedClient = _allClients.FirstOrDefault(c => c.Id == quote.ClientId);
                    if (_selectedClient != null)
                    {
                        _clientSearchText = _selectedClient.CompanyName;
                    }
                }

                RecalculateTotals();
            }
        }
        catch (Exception ex)
        {
            _errorMessage = $"Error al cargar cotización: {ex.Message}";
        }
    }

    // ⭐ NUEVO: Método para cuando se selecciona un ticket
    private void OnTicketSelected(QuoteItemDto item)
    {
        if (item.TicketId.HasValue && item.TicketId.Value > 0)
        {
            var ticket = _closedTickets?.FirstOrDefault(t => t.Id == item.TicketId.Value);
            if (ticket != null)
            {
                Console.WriteLine($"✅ Ticket seleccionado: #{ticket.Id} - {ticket.Title}");
                StateHasChanged();
            }
        }
    }

    private void OnClientFocus()
    {
        if (!string.IsNullOrWhiteSpace(_clientSearchText))
        {
            _showSuggestions = true;
        }
    }

    private async Task OnClientBlur()
    {
        await Task.Delay(200);
        _showSuggestions = false;
        StateHasChanged();
    }

    private void OnClientSearchInput(ChangeEventArgs e)
    {
        _clientSearchText = e.Value?.ToString() ?? string.Empty;

        if (string.IsNullOrWhiteSpace(_clientSearchText))
        {
            _filteredClients = new List<ClientDto>();
            _showSuggestions = false;
            _selectedClient = null;
            _quoteDto.ClientId = 0;
        }
        else
        {
            _filteredClients = _allClients
                .Where(c => c.CompanyName.Contains(_clientSearchText, StringComparison.OrdinalIgnoreCase))
                .OrderBy(c => c.CompanyName)
                .ToList();
            _showSuggestions = true;

            var exactMatch = _allClients.FirstOrDefault(c =>
                c.CompanyName.Equals(_clientSearchText, StringComparison.OrdinalIgnoreCase));

            if (exactMatch == null && _selectedClient != null)
            {
                _selectedClient = null;
                _quoteDto.ClientId = 0;
            }
        }

        StateHasChanged();
    }

    private void OnKeyDown(KeyboardEventArgs e)
    {
        if (e.Key == "Escape")
        {
            _showSuggestions = false;
            StateHasChanged();
        }
    }

    private void SelectClient(ClientDto client)
    {
        _selectedClient = client;
        _quoteDto.ClientId = client.Id ?? 0;
        _clientSearchText = client.CompanyName;
        _showSuggestions = false;
        StateHasChanged();
    }

    private void AddItem()
    {
        _quoteDto.Items.Add(new QuoteItemDto
        {
            Quantity = 1,
            UnitPrice = 0
        });
        RecalculateTotals();
    }

    private void RemoveItem(int index)
    {
        _quoteDto.Items.RemoveAt(index);
        RecalculateTotals();
    }

    private void RecalculateTotals()
    {
        _calculatedSubtotal = _quoteDto.Items.Sum(i => i.Quantity * i.UnitPrice);
        _calculatedTax = _calculatedSubtotal * 0.16m;
        _calculatedTotal = _calculatedSubtotal + _calculatedTax;
        StateHasChanged();
    }

    private async Task HandleSubmit()
    {
        _showSuggestions = false;

        if (_quoteDto.ClientId == 0)
        {
            _errorMessage = "Debe seleccionar un cliente de la lista.";
            return;
        }

        // ⭐ VALIDACIÓN: Asegurar que los TicketId se envían correctamente
        foreach (var item in _quoteDto.Items)
        {
            if (!item.TicketId.HasValue || item.TicketId.Value == 0)
            {
                item.TicketId = null; // Normalizar valores vacíos
            }
            Console.WriteLine($"Item: {item.Description}, TicketId: {item.TicketId?.ToString() ?? "null"}");
        }

        _isSaving = true;
        _errorMessage = null;
        StateHasChanged();

        try
        {
            if (_isEditMode)
            {
                var result = await QuoteApiService.UpdateQuoteAsync(QuoteId!.Value, _quoteDto);
                if (result.Success)
                {
                    ShowNotification("Éxito", "Cotización actualizada correctamente.", NotificationSeverity.Success);
                    DialogService.Close(true);
                }
                else
                {
                    _errorMessage = result.ErrorMessage ?? "No se pudo actualizar la cotización.";
                }
            }
            else
            {
                var result = await QuoteApiService.CreateQuoteAsync(_quoteDto);
                if (result.Success)
                {
                    ShowNotification("Éxito", "Cotización creada correctamente.", NotificationSeverity.Success);
                    DialogService.Close(true);
                }
                else
                {
                    _errorMessage = result.ErrorMessage ?? "No se pudo crear la cotización.";
                }
            }
        }
        catch (Exception ex)
        {
            _errorMessage = $"Error al {(_isEditMode ? "actualizar" : "crear")} la cotización: {ex.Message}";
        }
        finally
        {
            _isSaving = false;
            StateHasChanged();
        }
    }

    private void Cancel()
    {
        DialogService.Close(false);
    }

    private void ShowNotification(string title, string message, NotificationSeverity severity)
    {
        NotificationService.Notify(new NotificationMessage
        {
            Severity = severity,
            Summary = title,
            Detail = message,
            Duration = 4000
        });
    }
}
