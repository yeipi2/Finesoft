    private async Task DeleteActivity(int activityId)
    {
        try
        {
            var result = await TicketApiService.DeleteActivityAsync(TicketId, activityId);
            if (result.Success)
            {
                ShowNotification("Éxito", "Actividad eliminada correctamente.", NotificationSeverity.Success);
                await LoadTicket();
            }
            else
            {
                ShowNotification("Error", result.ErrorMessage ?? "No se pudo eliminar la actividad.", NotificationSeverity.Error);
            }
        }
        catch (Exception ex)
        {
            ShowNotification("Error", $"Error: {ex.Message}", NotificationSeverity.Error);
        }
    }

    // ⭐ CAMBIO: CompleteActivity ya no resetea el bloqueo, solo recarga el ticket
    private async Task CompleteActivity(int activityId)
    {
        var confirmed = await DialogService.Confirm(
            "¿Marcar esta actividad como completada? Las horas se sumarán al total de horas reales del ticket.",
            "Confirmar Completar",
            new ConfirmOptions { OkButtonText = "Sí, completar", CancelButtonText = "Cancelar" });

        if (confirmed == true)
        {
            try
            {
                var result = await TicketApiService.CompleteActivityAsync(TicketId, activityId);
                if (result.Success)
                {
                    ShowNotification("Éxito", "Actividad completada. Las horas se han sumado al total.", NotificationSeverity.Success);

                    // ⭐ Recargar el ticket PRIMERO
                    await LoadTicket();

                    // ⭐ LUEGO verificar si todas están completadas
                    await CheckAllActivitiesCompleted();
                }
                else
                {
                    ShowNotification("Error", result.ErrorMessage ?? "No se pudo completar la actividad.", NotificationSeverity.Error);
                }
            }
            catch (Exception ex)
            {
                ShowNotification("Error", $"Error: {ex.Message}", NotificationSeverity.Error);
            }
        }
    }

    // ⭐ MEJORA: Verificar y ofrecer cambio a "En Revisión" automáticamente
    private async Task CheckAllActivitiesCompleted()
    {
        if (_ticket?.Activities != null && _ticket.Activities.Any())
        {
            var allCompleted = _ticket.Activities.All(a => a.IsCompleted);

            // ⭐ Solo ofrecer cambio si está "En Progreso" y TODAS están completadas
            if (allCompleted && _ticket.Status == "En Progreso")
            {
                var confirmed = await DialogService.Confirm(
                    "¡Todas las actividades están completadas! ¿Deseas pasar el ticket a 'En Revisión'?",
                    "Ticket Listo para Revisión",
                    new ConfirmOptions { OkButtonText = "Sí, pasar a revisión", CancelButtonText = "No, aún no" });

                if (confirmed == true)
                {
                    await UpdateTicketStatus("En Revisión");
                }
            }
        }
    }

    // ⭐ Método para actualizar el estado del ticket
    private async Task UpdateTicketStatus(string newStatus)
    {
        try
        {
            var result = await TicketApiService.UpdateTicketStatusAsync(TicketId, newStatus);

            if (result.Success)
            {
                ShowNotification("Éxito", $"Estado del ticket actualizado a '{newStatus}'.", NotificationSeverity.Success);
                await LoadTicket(); // Recargar para reflejar el nuevo estado
            }
            else
            {
                ShowNotification("Error", result.ErrorMessage ?? "No se pudo actualizar el estado.", NotificationSeverity.Error);
            }
        }
        catch (Exception ex)
        {
            ShowNotification("Error", $"Error al actualizar estado: {ex.Message}", NotificationSeverity.Error);
        }
    }

