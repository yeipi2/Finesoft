@page "/tickets/{TicketId:int}"
@using fs_front.DTO
@using Microsoft.AspNetCore.Components.Authorization

<PageTitle>Ticket #@TicketId</PageTitle>

<div class="container p-4">
    @if (_isLoading)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Cargando...</span>
            </div>
            <p class="mt-2 text-muted">Cargando detalles del ticket...</p>
        </div>
    }
    else if (!_hasAccess)
    {
        <div class="alert alert-danger">
            <i class="bi bi-exclamation-triangle"></i>
            No tienes permiso para ver este ticket.
        </div>
        <button class="btn btn-secondary mt-2" @onclick="GoBack">
            <i class="bi bi-arrow-left"></i> Volver
        </button>
    }
    else if (_ticket != null)
    {
        <div class="row mb-4">
            <div class="col">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/tickets">Tickets</a></li>
                        <li class="breadcrumb-item active">Ticket #@_ticket.Id</li>
                    </ol>
                </nav>

                <div class="d-flex justify-content-between align-items-start">
                    <div>
                        <h1 class="display-6 fw-bold mb-2">
                            <span class="text-muted">#@_ticket.Id</span> @_ticket.Title
                        </h1>
                        <div class="d-flex gap-2 mb-2">
                            @{
                                var priorityClass = _ticket.Priority switch
                                {
                                                "Urgente" => "bg-danger",
                                                "Alta" => "bg-warning",
                                                "Media" => "bg-info",
                                    _ => "bg-secondary"
                                };
                                var statusClass = _ticket.Status switch
                                {
                                                "Abierto" => "bg-primary",
                                                "En Progreso" => "bg-warning",
                                                "En Revisión" => "bg-info",
                                                "Cerrado" => "bg-success",
                                    _ => "bg-secondary"
                                };
                            }
                            <span class="badge @priorityClass fs-6">@_ticket.Priority</span>
                            <span class="badge @statusClass fs-6">@_ticket.Status</span>
                        </div>
                    </div>

                    <div class="d-flex gap-2">
                        @if (_canEditTicket)
                        {
                            <button class="btn btn-primary" @onclick="EditTicket">
                                <i class="bi bi-pencil-fill"></i> Editar
                            </button>
                        }
                        @if (_canDeleteTicket)
                        {
                            <button class="btn btn-danger" @onclick="ConfirmDelete">
                                <i class="bi bi-trash-fill"></i> Eliminar
                            </button>
                        }
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-8">

                <div class="card mb-4">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0"><i class="bi bi-info-circle"></i> Descripción</h5>
                    </div>
                    <div class="card-body">
                        <p class="mb-0">@_ticket.Description</p>
                    </div>
                </div>

                @if (_canManageActivities)
                {
                    <div class="card mb-4">
                        <div class="card-header bg-warning text-dark">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <h5 class="mb-0">
                                        <i class="bi bi-list-task"></i> Actividades a Realizar
                                    </h5>
                                    <small class="text-muted">
                                        @(_ticket.Activities?.Count(a => !a.IsCompleted) ?? 0) pendientes •
                                        @(_ticket.Activities?.Count(a => a.IsCompleted) ?? 0) completadas
                                    </small>
                                </div>
                                <div class="d-flex gap-2">
                                    @* ⭐ CAMBIO: Solo mostrar botón Agregar si NO está bloqueado *@
                                    @if (!ActivitiesAreLocked && _ticket.Status != "Cerrado")
                                    {
                                        <button class="btn btn-sm btn-dark" @onclick="ShowAddActivityModal">
                                            <i class="bi bi-plus-lg"></i> Agregar Actividad
                                        </button>
                                    }

                                    @if (_ticket.Activities != null && _ticket.Activities.Any())
                                    {
                                        @* ⭐ CAMBIO: Mostrar botón según estado del ticket *@
                                        @if (_ticket.Status == "Abierto")
                                        {
                                            <button class="btn btn-sm btn-success"
                                                    @onclick="LockActivities"
                                                    title="Bloquear actividades y comenzar trabajo">
                                                <i class="bi bi-lock"></i> Bloquear y Comenzar
                                            </button>
                                        }
                                        else if (_ticket.Status == "En Progreso")
                                        {
                                            var allCompleted = _ticket.Activities != null
                                            && _ticket.Activities.Any()
                                            && _ticket.Activities.All(a => a.IsCompleted);

                                            if (allCompleted)
                                            {
                                                <button class="btn btn-sm btn-secondary"
                                                        @onclick="UnlockActivities"
                                                        title="Desbloquear actividades para editar">
                                                    <i class="bi bi-unlock"></i> Desbloquear Actividades
                                                </button>

                                                <button class="btn btn-sm btn-info"
                                                        @onclick="PassToReview"
                                                        title="Pasar ticket a revisión">
                                                    <i class="bi bi-eye-fill"></i> Pasar a Revisión
                                                </button>
                                            }
                                            else
                                            {
                                                <button class="btn btn-sm btn-secondary"
                                                        @onclick="UnlockActivities"
                                                        title="Desbloquear actividades para editar">
                                                    <i class="bi bi-unlock"></i> Desbloquear Actividades
                                                </button>
                                            }
                                        }

                                        else if (_ticket.Status == "En Revisión")
                                        {
                                            <button class="btn btn-sm btn-success"
                                                    @onclick="CloseTicket"
                                                    title="Marcar ticket como completado">
                                                <i class="bi bi-check-circle-fill"></i> Cerrar Ticket
                                            </button>
                                            <button class="btn btn-sm btn-warning"
                                                    @onclick="UnlockActivities"
                                                    title="Regresar a edición">
                                                <i class="bi bi-arrow-counterclockwise"></i> Regresar a Edición
                                            </button>
                                        }
                                    }
                                </div>
                            </div>
                        </div>
                        <div class="card-body">
                            @if (_ticket.Activities != null && _ticket.Activities.Any())
                            {
                                <div class="list-group">
                                    @foreach (var activity in _ticket.Activities.OrderBy(a => a.IsCompleted).ThenBy(a => a.CreatedAt))
                                    {
                                        <div class="list-group-item @(activity.IsCompleted ? "bg-light" : "")">
                                            <div class="d-flex justify-content-between align-items-start">
                                                <div class="flex-grow-1">
                                                    <div class="d-flex align-items-center gap-2 mb-2">
                                                        @if (activity.IsCompleted)
                                                        {
                                                            <i class="bi bi-check-circle-fill text-success fs-5"></i>
                                                            <span class="text-decoration-line-through text-muted">@activity.Description</span>
                                                        }
                                                        else
                                                        {
                                                            <i class="bi bi-circle text-muted"></i>
                                                            <strong>@activity.Description</strong>
                                                        }
                                                    </div>
                                                    <small class="text-muted">
                                                        <i class="bi bi-clock"></i> @activity.HoursSpent.ToString("0.00")h
                                                        | <i class="bi bi-person"></i> @activity.CreatedByUserName
                                                        @if (activity.IsCompleted && activity.CompletedAt.HasValue)
                                                        {
                                                            <span> | Completada: @activity.CompletedAt.Value.ToString("dd/MM/yyyy HH:mm")</span>
                                                        }
                                                    </small>
                                                </div>
                                                <div class="d-flex gap-1">
                                                    @* ⭐ CAMBIO: Solo mostrar botón completar si está bloqueado Y no completada *@
                                                    @if (!activity.IsCompleted && ActivitiesAreLocked)
                                                    {
                                                        <button class="btn btn-sm btn-success"
                                                                @onclick="() => CompleteActivity(activity.Id)"
                                                                title="Marcar como completada">
                                                            <i class="bi bi-check-lg"></i>
                                                        </button>
                                                    }
                                                    @* ⭐ CAMBIO: Solo mostrar editar/eliminar si NO está bloqueado *@
                                                    @if (!activity.IsCompleted && !ActivitiesAreLocked && _ticket.Status != "Cerrado")
                                                    {
                                                        <button class="btn btn-sm btn-primary"
                                                                @onclick="() => ShowEditActivityModal(activity)"
                                                                title="Editar">
                                                            <i class="bi bi-pencil"></i>
                                                        </button>
                                                        <button class="btn btn-sm btn-danger"
                                                                @onclick="() => ConfirmDeleteActivity(activity)"
                                                                title="Eliminar">
                                                            <i class="bi bi-trash"></i>
                                                        </button>
                                                    }
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>

                                @* ⭐ CAMBIO: Mostrar mensaje apropiado según estado *@
                                @if (ActivitiesAreLocked)
                                {
                                    @if (_ticket.Status == "En Progreso")
                                    {
                                        <div class="alert alert-info mt-3 mb-0">
                                            <i class="bi bi-info-circle"></i>
                                            Las actividades están bloqueadas. Marca todas como completadas para pasar a revisión.
                                        </div>
                                    }
                                    else if (_ticket.Status == "En Revisión")
                                    {
                                        <div class="alert alert-success mt-3 mb-0">
                                            <i class="bi bi-check-circle"></i>
                                            Ticket en revisión. Todas las actividades han sido completadas.
                                        </div>
                                    }
                                }
                            }
                            else
                            {
                                <div class="text-center py-4">
                                    <i class="bi bi-clipboard-x text-muted" style="font-size: 3rem;"></i>
                                    <p class="text-muted mt-2 mb-1">No hay actividades registradas.</p>
                                    <p class="text-muted small">Comienza agregando las tareas que necesitas realizar para completar este ticket.</p>
                                </div>
                            }
                        </div>
                    </div>
                }

                <div class="card mb-4">
                    <div class="card-header bg-success text-white">
                        <h5 class="mb-0">
                            <i class="bi bi-chat-dots"></i> Comentarios (@(_ticket.Comments?.Count ?? 0))
                        </h5>
                    </div>
                    <div class="card-body">
                        @if (_ticket.Comments != null && _ticket.Comments.Any())
                        {
                            @foreach (var comment in _ticket.Comments.OrderBy(c => c.CreatedAt))
                            {
                                <div class="border-start border-3 @(comment.IsInternal ? "border-warning" : "border-primary") ps-3 mb-3">
                                    <div class="d-flex justify-content-between align-items-start mb-1">
                                        <div>
                                            <strong>@comment.UserName</strong>
                                            @if (comment.IsInternal)
                                            {
                                                <span class="badge bg-warning text-dark ms-2">Interno</span>
                                            }
                                        </div>
                                        <small class="text-muted">@comment.CreatedAt?.ToString("dd/MM/yyyy HH:mm")</small>
                                    </div>
                                    <p class="mb-0">@comment.Comment</p>
                                </div>
                            }
                        }
                        else
                        {
                            <p class="text-muted text-center py-3">No hay comentarios aún.</p>
                        }

                        @if (_canComment)
                        {
                            <div class="mt-4">
                                <EditForm Model="_newComment" OnValidSubmit="AddComment">
                                    <DataAnnotationsValidator />
                                    <div class="mb-3">
                                        <label class="form-label fw-bold">Agregar Comentario</label>
                                        <InputTextArea class="form-control" rows="3" @bind-Value="_newComment.Comment"
                                                       placeholder="Escribe tu comentario aquí..." />
                                        <ValidationMessage For="@(() => _newComment.Comment)" />
                                    </div>
                                    <button type="submit" class="btn btn-primary" disabled="@_isAddingComment">
                                        @if (_isAddingComment)
                                        {
                                            <span class="spinner-border spinner-border-sm me-2"></span>
                                        }
                                        <i class="bi bi-send"></i> Agregar Comentario
                                    </button>
                                </EditForm>
                            </div>
                        }
                    </div>
                </div>

                <div class="card">
                    <div class="card-header bg-info text-white" style="cursor: pointer; user-select: none;" @onclick="ToggleHistoryCollapse">
                        <div class="d-flex justify-content-between align-items-center">
                            <h5 class="mb-0">
                                <i class="bi bi-clock-history"></i> Historial de Cambios
                                @if (_ticket.History != null && _ticket.History.Any())
                                {
                                    <span class="badge bg-light text-dark ms-2">@_ticket.History.Count</span>
                                }
                            </h5>
                            <i class="bi @(_isHistoryCollapsed ? "bi-chevron-down" : "bi-chevron-up") fs-5"></i>
                        </div>
                    </div>
                    <div class="collapse @(_isHistoryCollapsed ? "" : "show")" id="historyCollapse">
                        <div class="card-body" style="max-height: 400px; overflow-y: auto;">
                            @if (_ticket.History != null && _ticket.History.Any())
                            {
                                @foreach (var history in _ticket.History.OrderByDescending(h => h.ChangedAt))
                                {
                                    <div class="mb-3">
                                        <div class="d-flex gap-2 align-items-start">
                                            <i class="bi bi-circle-fill text-primary" style="font-size: 0.5rem; margin-top: 0.5rem;"></i>
                                            <div class="flex-grow-1">
                                                <div class="d-flex justify-content-between align-items-start">
                                                    <div>
                                                        <strong>@history.UserName</strong>
                                                        <span class="text-muted"> - @history.Action</span>
                                                    </div>
                                                    <small class="text-muted">@history.ChangedAt.ToString("dd/MM/yyyy HH:mm")</small>
                                                </div>
                                                @if (!string.IsNullOrEmpty(history.OldValue) || !string.IsNullOrEmpty(history.NewValue))
                                                {
                                                    <small class="text-muted">
                                                        @if (!string.IsNullOrEmpty(history.OldValue))
                                                        {
                                                            <span>De: <span class="text-decoration-line-through">@history.OldValue</span></span>
                                                        }
                                                        @if (!string.IsNullOrEmpty(history.NewValue))
                                                        {
                                                            <span> A: <strong>@history.NewValue</strong></span>
                                                        }
                                                    </small>
                                                }
                                            </div>
                                        </div>
                                    </div>
                                }
                            }
                            else
                            {
                                <p class="text-muted text-center py-3">No hay historial disponible.</p>
                            }
                        </div>
                    </div>
                </div>

            </div>

            <div class="col-lg-4">
                <div class="card mb-4">
                    <div class="card-header">
                        <h6 class="mb-0"><i class="bi bi-building"></i> Cliente y Proyecto</h6>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <small class="text-muted">Cliente</small>
                            <div class="fw-bold">@_ticket.ClientName</div>
                        </div>
                        <div class="mb-3">
                            <small class="text-muted">Proyecto</small>
                            <div class="fw-bold">@_ticket.ProjectName</div>
                        </div>
                    </div>
                </div>

                <div class="card mb-4">
                    <div class="card-header">
                        <h6 class="mb-0"><i class="bi bi-list-check"></i> Detalles</h6>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <small class="text-muted">Creado por</small>
                            <div>@_ticket.CreatedByUserName</div>
                            <small class="text-muted">@_ticket.CreatedAt.ToString("dd/MM/yyyy HH:mm")</small>
                        </div>
                        <div class="mb-3">
                            <small class="text-muted">Asignado a</small>
                            <div>
                                @if (!string.IsNullOrEmpty(_ticket.AssignedToUserName))
                                {
                                    <span>@_ticket.AssignedToUserName</span>
                                }
                                else
                                {
                                    <span class="text-muted">Sin asignar</span>
                                }
                            </div>
                        </div>
                        @if (_ticket.UpdatedAt.HasValue)
                        {
                            <div class="mb-3">
                                <small class="text-muted">Última actualización</small>
                                <div>@_ticket.UpdatedAt.Value.ToString("dd/MM/yyyy HH:mm")</div>
                            </div>
                        }
                        @if (_ticket.ClosedAt.HasValue)
                        {
                            <div>
                                <small class="text-muted">Cerrado</small>
                                <div>@_ticket.ClosedAt.Value.ToString("dd/MM/yyyy HH:mm")</div>
                            </div>
                        }
                    </div>
                </div>

                <div class="card">
                    <div class="card-header">
                        <h6 class="mb-0"><i class="bi bi-clock"></i> Tiempo</h6>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <small class="text-muted">Horas Estimadas</small>
                            <div class="h4 mb-0">@_ticket.EstimatedHours.ToString("0.00")h</div>
                           @*  <small class="text-muted">Costo: $@((_ticket.EstimatedHours * _ticket.HourlyRate).ToString("N2"))</small> *@
                        </div>
                        <div>
                            <small class="text-muted">Horas Reales</small>
                            <div class="h4 mb-0 text-success">@_ticket.ActualHours.ToString("0.00")h</div>
                            @* <small class="text-muted">Costo: $@((_ticket.ActualHours * _ticket.HourlyRate).ToString("N2"))</small> *@
                        </div>
                        @if (_ticket.ActualHours > _ticket.EstimatedHours)
                        {
                            <div class="alert alert-warning mt-3 mb-0">
                                <small>
                                    <i class="bi bi-exclamation-triangle"></i>
                                    Excedido por @((_ticket.ActualHours - _ticket.EstimatedHours).ToString("0.00"))h
                                </small>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

        <div class="row mt-4">
            <div class="col">
                <button class="btn btn-secondary" @onclick="GoBack">
                    <i class="bi bi-arrow-left"></i> Volver a Tickets
                </button>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-warning">
            <i class="bi bi-exclamation-triangle"></i>
            Ticket no encontrado.
        </div>
    }
</div>

@inject ITicketApiService TicketApiService
@inject DialogService DialogService
@inject NotificationService NotificationService
@inject NavigationManager NavigationManager
@inject fs_front.Services.PermissionService PermissionService

@code {
    [Parameter] public int TicketId { get; set; }

    private TicketDetailDto? _ticket;
    private TicketCommentDto _newComment = new();
    private bool _isLoading = false;
    private bool _isAddingComment = false;
    private bool _hasAccess = false;
    private string? _currentUserId;
    private string? _currentRole;
    private bool _isHistoryCollapsed = true; // ⭐ NUEVO: Control de colapso del historial

    // ⭐ CAMBIO CRÍTICO: Propiedad computed que determina el bloqueo basado en el ESTADO del ticket
    private bool ActivitiesAreLocked => _ticket?.Status == "En Progreso" || _ticket?.Status == "En Revisión";

    private bool _canEditTicket = false;
    private bool _canDeleteTicket = false;
    private bool _canManageActivities = false;
    private bool _canComment = false;

    protected override async Task OnInitializedAsync()
    {
        await LoadPermissions();
        await CheckAccess();
    }

    private async Task LoadPermissions()
    {
        _currentUserId = await PermissionService.GetUserIdAsync();
        _currentRole = await PermissionService.GetRoleAsync();

        _canEditTicket = await PermissionService.HasPermissionAsync("tickets.edit");
        _canDeleteTicket = await PermissionService.HasPermissionAsync("tickets.delete");
        _canManageActivities = await PermissionService.HasPermissionAsync("tickets.activity");
        _canComment = await PermissionService.HasPermissionAsync("tickets.comment");
    }

    private async Task CheckAccess()
    {
        _isLoading = true;
        try
        {
            var ticket = await TicketApiService.GetTicketByIdAsync(TicketId);

            if (ticket != null)
            {
                var permViewDetail = await PermissionService.HasPermissionAsync("tickets.view_detail");
                var roleCanViewAll = _currentRole is "Admin" or "Administracion" or "Supervisor";

                _hasAccess = permViewDetail
                             || roleCanViewAll
                             || ticket.AssignedToUserId == _currentUserId
                             || ticket.CreatedByUserId == _currentUserId;

                _ticket = ticket;
            }
        }
        catch (Exception ex)
        {
            ShowNotification("Error", $"Error al verificar acceso: {ex.Message}", NotificationSeverity.Error);
        }
        finally
        {
            _isLoading = false;
        }
    }

    private async Task LoadTicket()
    {
        _isLoading = true;
        try
        {
            _ticket = await TicketApiService.GetTicketByIdAsync(TicketId);
            // ⭐ Ya no necesitamos actualizar _activitiesLocked aquí porque es computed
        }
        catch (Exception ex)
        {
            ShowNotification("Error", $"Error al cargar el ticket: {ex.Message}", NotificationSeverity.Error);
        }
        finally
        {
            _isLoading = false;
        }
    }

    // ⭐ CAMBIO: Bloquear actividades ahora cambia el ESTADO del ticket
    private async Task LockActivities()
    {
        var confirmed = await DialogService.Confirm(
            "¿Bloquear las actividades y comenzar a trabajar en el ticket? Esto cambiará el estado a 'En Progreso'.",
            "Confirmar Bloqueo",
            new ConfirmOptions { OkButtonText = "Sí, comenzar", CancelButtonText = "Cancelar" });

        if (confirmed == true)
        {
            await UpdateTicketStatus("En Progreso");
        }
    }

    // ⭐ CAMBIO: Desbloquear actividades cambia el estado a "Abierto"
    private async Task UnlockActivities()
    {
        var confirmed = await DialogService.Confirm(
            "¿Desbloquear las actividades? Esto cambiará el estado del ticket a 'Abierto' y podrás agregar, editar y eliminar actividades.",
            "Confirmar Desbloqueo",
            new ConfirmOptions { OkButtonText = "Sí, desbloquear", CancelButtonText = "Cancelar" });

        if (confirmed == true)
        {
            await UpdateTicketStatus("Abierto");
        }
    }

    // ⭐ NUEVO: Cerrar ticket (cambiar a estado Cerrado)
    private async Task CloseTicket()
    {
        var confirmed = await DialogService.Confirm(
            "¿Marcar este ticket como cerrado? Esto indica que el trabajo ha sido completado y revisado satisfactoriamente.",
            "Cerrar Ticket",
            new ConfirmOptions { OkButtonText = "Sí, cerrar ticket", CancelButtonText = "Cancelar" });

        if (confirmed == true)
        {
            await UpdateTicketStatus("Cerrado");
        }
    }

    // ⭐ NUEVO: Toggle para mostrar/ocultar historial
    private void ToggleHistoryCollapse()
    {
        _isHistoryCollapsed = !_isHistoryCollapsed;
    }

    private async Task ShowAddActivityModal()
    {
        var newActivity = new TicketActivityDto { TicketId = TicketId };

        var result = await DialogService.OpenAsync("Agregar Actividad", ds =>
            @<div>
    <EditForm Model="newActivity" OnValidSubmit="async () => await AddActivity(newActivity, ds)">
        <DataAnnotationsValidator />
        <div class="mb-3">
            <label class="form-label fw-bold">Descripción de la Actividad *</label>
            <InputTextArea class="form-control" rows="3" @bind-Value="newActivity.Description"
                           placeholder="Ej: Revisar la base de datos, Implementar autenticación..." />
            <ValidationMessage For="@(() => newActivity.Description)" />
            <small class="text-muted">Describe claramente qué se debe hacer en esta actividad.</small>
        </div>
        <div class="mb-3">
            <label class="form-label fw-bold">Horas Estimadas *</label>
            <InputNumber class="form-control" @bind-Value="newActivity.HoursSpent" placeholder="0.00" step="0.25" min="0" />
            <ValidationMessage For="@(() => newActivity.HoursSpent)" />
            <small class="text-muted">Tiempo estimado para completar esta actividad (en horas).</small>
        </div>
        <div class="d-flex justify-content-end gap-2">
            <button type="button" class="btn btn-secondary" @onclick="() => ds.Close(false)">Cancelar</button>
            <button type="submit" class="btn btn-primary"><i class="bi bi-plus-lg"></i> Agregar Actividad</button>
        </div>
    </EditForm>
</div>
        , new DialogOptions { Width = "600px" });

        if (result == true) await LoadTicket();
    }

    private async Task AddActivity(TicketActivityDto activity, DialogService ds)
    {
        try
        {
            var result = await TicketApiService.AddActivityAsync(TicketId, activity);
            if (result.Success)
            {
                ShowNotification("Éxito", "Actividad agregada correctamente.", NotificationSeverity.Success);
                ds.Close(true);
            }
            else
            {
