@page "/tickets/{TicketId:int}"
@using fs_front.DTO
@using Microsoft.AspNetCore.Components.Authorization

<PageTitle>Ticket #@TicketId</PageTitle>

<div class="container p-4">
    @if (_isLoading)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Cargando...</span>
            </div>
            <p class="mt-2 text-muted">Cargando detalles del ticket...</p>
        </div>
    }
    else if (!_hasAccess)
    {
        <div class="alert alert-danger">
            <i class="bi bi-exclamation-triangle"></i>
            No tienes permiso para ver este ticket.
        </div>
        <button class="btn btn-secondary mt-2" @onclick="GoBack">
            <i class="bi bi-arrow-left"></i> Volver
        </button>
    }
    else if (_ticket != null)
    {
        @* ── Breadcrumb + encabezado ── *@
        <div class="row mb-4">
            <div class="col">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/tickets">Tickets</a></li>
                        <li class="breadcrumb-item active">Ticket #@_ticket.Id</li>
                    </ol>
                </nav>

                <div class="d-flex justify-content-between align-items-start">
                    <div>
                        <h1 class="display-6 fw-bold mb-2">
                            <span class="text-muted">#@_ticket.Id</span> @_ticket.Title
                        </h1>
                        <div class="d-flex gap-2 mb-2">
                            <TicketPriorityBadge Priority="@_ticket.Priority" Class="fs-6" />
                            <TicketStatusBadge   Status="@_ticket.Status"     Class="fs-6" />
                        </div>
                    </div>

                    <div class="d-flex gap-2">
                        @if (_canEditTicket)
                        {
                            <button class="btn btn-primary" @onclick="EditTicket">
                                <i class="bi bi-pencil-fill"></i> Editar
                            </button>
                        }
                        @if (_canDeleteTicket)
                        {
                            <button class="btn btn-danger" @onclick="ConfirmDelete">
                                <i class="bi bi-trash-fill"></i> Eliminar
                            </button>
                        }
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            @* ── Columna principal ── *@
            <div class="col-lg-8">

                <TicketInfoCard Description="@_ticket.Description" />

                <TicketActivitiesCard Activities="@_ticket.Activities"
                                      Status="@_ticket.Status"
                                      CanManage="@_canManageActivities"
                                      ActivitiesAreLocked="@ActivitiesAreLocked"
                                      OnAddActivity="ShowAddActivityModal"
                                      OnLock="LockActivities"
                                      OnUnlock="UnlockActivities"
                                      OnPassToReview="PassToReview"
                                      OnClose="CloseTicket"
                                      OnCompleteActivity="CompleteActivity"
                                      OnEditActivity="ShowEditActivityModal"
                                      OnDeleteActivity="ConfirmDeleteActivity" />

                <TicketCommentsCard Comments="@_ticket.Comments"
                                    CanComment="@_canComment"
                                    IsSaving="@_isAddingComment"
                                    NewComment="@_newComment"
                                    OnAddComment="AddComment" />

                <TicketHistoryCard History="@_ticket.History" />

            </div>

            @* ── Sidebar ── *@
            <div class="col-lg-4">
                <TicketSidebarCards Ticket="@_ticket" />
            </div>
        </div>

        <div class="row mt-4">
            <div class="col">
                <button class="btn btn-secondary" @onclick="GoBack">
                    <i class="bi bi-arrow-left"></i> Volver a Tickets
                </button>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-warning" role="alert">
            <i class="bi bi-exclamation-triangle"></i>
            Ticket no encontrado.
        </div>
    }
</div>

@inject ITicketApiService TicketApiService
@inject DialogService DialogService
@inject NotificationService NotificationService
@inject NavigationManager NavigationManager
@inject fs_front.Services.PermissionService PermissionService

@code {
    [Parameter] public int TicketId { get; set; }

    private TicketDetailDto? _ticket;
    private TicketCommentDto _newComment = new();
    private bool _isLoading       = false;
    private bool _isAddingComment = false;
    private bool _hasAccess       = false;
    private string? _currentUserId;
    private string? _currentRole;

    private bool ActivitiesAreLocked =>
        _ticket?.Status == "En Progreso" || _ticket?.Status == "En Revisión";

    private bool _canEditTicket        = false;
    private bool _canDeleteTicket      = false;
    private bool _canManageActivities  = false;
    private bool _canComment           = false;

    // ── Ciclo de vida ─────────────────────────────────────────────────────────
    protected override async Task OnInitializedAsync()
    {
        await LoadPermissions();
        await CheckAccess();
    }

    private async Task LoadPermissions()
    {
        _currentUserId         = await PermissionService.GetUserIdAsync();
        _currentRole           = await PermissionService.GetRoleAsync();
        _canEditTicket         = await PermissionService.HasPermissionAsync("tickets.edit");
        _canDeleteTicket       = await PermissionService.HasPermissionAsync("tickets.delete");
        _canManageActivities   = await PermissionService.HasPermissionAsync("tickets.activity");
        _canComment            = await PermissionService.HasPermissionAsync("tickets.comment");
    }

    private async Task CheckAccess()
    {
        _isLoading = true;
        try
        {
            var ticket = await TicketApiService.GetTicketByIdAsync(TicketId);
            if (ticket != null)
            {
                var permViewDetail = await PermissionService.HasPermissionAsync("tickets.view_detail");
                var roleCanViewAll = _currentRole is "Admin" or "Administracion" or "Supervisor";

                _hasAccess = permViewDetail
                          || roleCanViewAll
                          || ticket.AssignedToUserId == _currentUserId
                          || ticket.CreatedByUserId  == _currentUserId;

                _ticket = ticket;
            }
        }
        catch (Exception ex)
        {
            Notify("Error", $"Error al verificar acceso: {ex.Message}", NotificationSeverity.Error);
        }
        finally
        {
            _isLoading = false;
        }
    }

    private async Task LoadTicket()
    {
        _isLoading = true;
        try   { _ticket = await TicketApiService.GetTicketByIdAsync(TicketId); }
        catch (Exception ex) { Notify("Error", $"Error al cargar el ticket: {ex.Message}", NotificationSeverity.Error); }
        finally { _isLoading = false; }
    }

    // ── Gestión de estado / actividades ──────────────────────────────────────
    private async Task LockActivities()
    {
        var ok = await DialogService.Confirm(
            "¿Bloquear las actividades y comenzar a trabajar en el ticket? Esto cambiará el estado a 'En Progreso'.",
            "Confirmar Bloqueo",
            new ConfirmOptions { OkButtonText = "Sí, comenzar", CancelButtonText = "Cancelar" });
        if (ok == true) await UpdateTicketStatus("En Progreso");
    }

    private async Task UnlockActivities()
    {
        var ok = await DialogService.Confirm(
            "¿Desbloquear las actividades? Esto cambiará el estado del ticket a 'Abierto'.",
            "Confirmar Desbloqueo",
            new ConfirmOptions { OkButtonText = "Sí, desbloquear", CancelButtonText = "Cancelar" });
        if (ok == true) await UpdateTicketStatus("Abierto");
    }

    private async Task CloseTicket()
    {
        var ok = await DialogService.Confirm(
            "¿Marcar este ticket como cerrado?",
            "Cerrar Ticket",
            new ConfirmOptions { OkButtonText = "Sí, cerrar ticket", CancelButtonText = "Cancelar" });
        if (ok == true) await UpdateTicketStatus("Cerrado");
    }

    private async Task PassToReview() => await UpdateTicketStatus("En Revisión");

    private async Task UpdateTicketStatus(string newStatus)
    {
        try
        {
            var result = await TicketApiService.UpdateTicketStatusAsync(TicketId, newStatus);
            if (result.Success)
            {
                Notify("Éxito", $"Estado actualizado a '{newStatus}'.", NotificationSeverity.Success);
                await LoadTicket();
            }
            else Notify("Error", result.ErrorMessage ?? "No se pudo actualizar el estado.", NotificationSeverity.Error);
        }
        catch (Exception ex) { Notify("Error", $"Error: {ex.Message}", NotificationSeverity.Error); }
    }

    // ── Actividades ───────────────────────────────────────────────────────────
    private async Task ShowAddActivityModal()
    {
        var newActivity = new TicketActivityDto { TicketId = TicketId };

        var result = await DialogService.OpenAsync("Agregar Actividad", ds =>
            @<div>
    <EditForm Model="newActivity" OnValidSubmit="async () => await AddActivity(newActivity, ds)">
        <DataAnnotationsValidator />
        <div class="mb-3">
            <label class="form-label fw-bold">Descripción de la Actividad *</label>
            <InputTextArea class="form-control" rows="3" @bind-Value="newActivity.Description"
                           placeholder="Ej: Revisar la base de datos, Implementar autenticación..." />
            <ValidationMessage For="@(() => newActivity.Description)" />
            <small class="text-muted">Describe claramente qué se debe hacer en esta actividad.</small>
        </div>
        <div class="mb-3">
            <label class="form-label fw-bold">Horas Estimadas *</label>
            <InputNumber class="form-control" @bind-Value="newActivity.HoursSpent" placeholder="0.00" step="0.25" min="0" />
            <ValidationMessage For="@(() => newActivity.HoursSpent)" />
            <small class="text-muted">Tiempo estimado para completar esta actividad (en horas).</small>
        </div>
        <div class="d-flex justify-content-end gap-2">
            <button type="button" class="btn btn-secondary" @onclick="() => ds.Close(false)">Cancelar</button>
            <button type="submit" class="btn btn-primary"><i class="bi bi-plus-lg"></i> Agregar Actividad</button>
        </div>
    </EditForm>
</div>
        , new DialogOptions { Width = "600px" });

        if (result == true) await LoadTicket();
    }

    private async Task AddActivity(TicketActivityDto activity, DialogService ds)
    {
        try
        {
            var result = await TicketApiService.AddActivityAsync(TicketId, activity);
            if (result.Success) { Notify("Éxito", "Actividad agregada correctamente.", NotificationSeverity.Success); ds.Close(true); }
            else Notify("Error", result.ErrorMessage ?? "No se pudo agregar la actividad.", NotificationSeverity.Error);
        }
        catch (Exception ex) { Notify("Error", $"Error: {ex.Message}", NotificationSeverity.Error); }
    }

    private async Task ShowEditActivityModal(TicketActivityDto activity)
    {
        var edit = new TicketActivityDto
        {
            Id = activity.Id, TicketId = activity.TicketId,
            Description = activity.Description, HoursSpent = activity.HoursSpent
        };

        var result = await DialogService.OpenAsync("Editar Actividad", ds =>
            @<div>
    <EditForm Model="edit" OnValidSubmit="async () => await UpdateActivity(edit, ds)">
        <DataAnnotationsValidator />
        <div class="mb-3">
            <label class="form-label fw-bold">Descripción *</label>
            <InputTextArea class="form-control" rows="3" @bind-Value="edit.Description" />
            <ValidationMessage For="@(() => edit.Description)" />
        </div>
        <div class="mb-3">
            <label class="form-label fw-bold">Horas Estimadas *</label>
            <InputNumber class="form-control" @bind-Value="edit.HoursSpent" step="0.25" min="0" />
            <ValidationMessage For="@(() => edit.HoursSpent)" />
        </div>
        <div class="d-flex justify-content-end gap-2">
            <button type="button" class="btn btn-secondary" @onclick="() => ds.Close(false)">Cancelar</button>
            <button type="submit" class="btn btn-primary"><i class="bi bi-check-lg"></i> Actualizar</button>
        </div>
    </EditForm>
</div>
        , new DialogOptions { Width = "600px" });

        if (result == true) await LoadTicket();
    }

    private async Task UpdateActivity(TicketActivityDto activity, DialogService ds)
    {
        try
        {
            var result = await TicketApiService.UpdateActivityAsync(TicketId, activity.Id, activity);
            if (result.Success) { Notify("Éxito", "Actividad actualizada.", NotificationSeverity.Success); ds.Close(true); }
            else Notify("Error", result.ErrorMessage ?? "No se pudo actualizar la actividad.", NotificationSeverity.Error);
        }
        catch (Exception ex) { Notify("Error", $"Error: {ex.Message}", NotificationSeverity.Error); }
    }

    private async Task ConfirmDeleteActivity(TicketActivityDto activity)
    {
        var ok = await DialogService.Confirm(
            $"¿Eliminar esta actividad?{(activity.IsCompleted ? " (Las horas sumadas serán restadas del total)" : "")}",
            "Confirmar Eliminación",
            new ConfirmOptions { OkButtonText = "Sí, eliminar", CancelButtonText = "Cancelar" });
        if (ok == true) await DeleteActivity(activity.Id);
    }

    private async Task DeleteActivity(int activityId)
    {
        try
        {
            var result = await TicketApiService.DeleteActivityAsync(TicketId, activityId);
            if (result.Success) { Notify("Éxito", "Actividad eliminada.", NotificationSeverity.Success); await LoadTicket(); }
            else Notify("Error", result.ErrorMessage ?? "No se pudo eliminar la actividad.", NotificationSeverity.Error);
        }
        catch (Exception ex) { Notify("Error", $"Error: {ex.Message}", NotificationSeverity.Error); }
    }

    private async Task CompleteActivity(int activityId)
    {
        var ok = await DialogService.Confirm(
            "¿Marcar esta actividad como completada? Las horas se sumarán al total de horas reales del ticket.",
            "Confirmar Completar",
            new ConfirmOptions { OkButtonText = "Sí, completar", CancelButtonText = "Cancelar" });

        if (ok == true)
        {
            try
            {
                var result = await TicketApiService.CompleteActivityAsync(TicketId, activityId);
                if (result.Success)
                {
                    Notify("Éxito", "Actividad completada. Las horas se han sumado al total.", NotificationSeverity.Success);
                    await LoadTicket();
                    await CheckAllActivitiesCompleted();
                }
                else Notify("Error", result.ErrorMessage ?? "No se pudo completar la actividad.", NotificationSeverity.Error);
            }
            catch (Exception ex) { Notify("Error", $"Error: {ex.Message}", NotificationSeverity.Error); }
        }
    }

    private async Task CheckAllActivitiesCompleted()
    {
        if (_ticket?.Activities != null && _ticket.Activities.Any()
            && _ticket.Activities.All(a => a.IsCompleted)
            && _ticket.Status == "En Progreso")
        {
            var ok = await DialogService.Confirm(
                "¡Todas las actividades están completadas! ¿Deseas pasar el ticket a 'En Revisión'?",
                "Ticket Listo para Revisión",
                new ConfirmOptions { OkButtonText = "Sí, pasar a revisión", CancelButtonText = "No, aún no" });
            if (ok == true) await UpdateTicketStatus("En Revisión");
        }
    }

    // ── Comentarios ───────────────────────────────────────────────────────────
    private async Task AddComment()
    {
        _isAddingComment = true;
        try
        {
            var result = await TicketApiService.AddCommentAsync(TicketId, _newComment);
            if (result.Success)
            {
                Notify("Éxito", "Comentario agregado correctamente.", NotificationSeverity.Success);
                _newComment = new TicketCommentDto();
                await LoadTicket();
            }
            else Notify("Error", result.ErrorMessage ?? "No se pudo agregar el comentario.", NotificationSeverity.Error);
        }
        catch (Exception ex) { Notify("Error", $"Error: {ex.Message}", NotificationSeverity.Error); }
        finally { _isAddingComment = false; }
    }

    // ── Editar / Eliminar ticket ──────────────────────────────────────────────
    private async Task EditTicket()
    {
        var result = await DialogService.OpenAsync<TicketForm>("Editar Ticket",
            new Dictionary<string, object> { { "TicketId", TicketId } },
            new DialogOptions { Width = "800px", Resizable = false, Draggable = false });
        if (result == true) await LoadTicket();
    }

    private async Task ConfirmDelete()
    {
        var ok = await DialogService.Confirm(
            "¿Está seguro que desea eliminar este ticket?",
            "Confirmar Eliminación",
            new ConfirmOptions { OkButtonText = "Sí, eliminar", CancelButtonText = "Cancelar" });
        if (ok == true) await DeleteTicket();
    }

    private async Task DeleteTicket()
    {
        try
        {
            var result = await TicketApiService.DeleteTicketAsync(TicketId);
            if (result.Success)
            {
                Notify("Éxito", "Ticket eliminado correctamente.", NotificationSeverity.Success);
                NavigationManager.NavigateTo("/tickets");
            }
            else Notify("Error", result.ErrorMessage ?? "No se pudo eliminar el ticket.", NotificationSeverity.Error);
        }
        catch (Exception ex) { Notify("Error", $"Error: {ex.Message}", NotificationSeverity.Error); }
    }

    private void GoBack() => NavigationManager.NavigateTo("/tickets");

    private void Notify(string title, string message, NotificationSeverity severity) =>
        NotificationService.Notify(new NotificationMessage
        {
            Severity = severity, Summary = title, Detail = message, Duration = 4000
        });
}
